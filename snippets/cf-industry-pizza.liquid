{% comment %} CF Industry: Pizza Restaurants {% endcomment %}

{%- liquid
  # Pizza Restaurant Equipment - using CORRECT Shopify handles
  assign categories = 'new-theme-pizza-ovens,new-theme-convection-ovens,new-theme-dough-prep-equipment,new-theme-planetary-spiral-mixers,new-theme-pizza-preparation-refrigerators,new-theme-hot-food-display-cases,new-theme-heated-cabinets,new-theme-cutting-boards' | split: ','

  assign titles = 'Pizza Ovens,Convection Ovens,Dough Prep Equipment,Mixers,Pizza Prep Refrigerators,Display Cases,Holding Cabinets,Cutting Boards' | split: ','

  assign images = 'pizza-oven-category.jpg,convection-oven-category.jpg,dough-prep-category.jpg,mixer-category.jpg,pizza-prep-fridge-category.jpg,display-case-category.jpg,holding-cabinet-category.jpg,cutting-board-category.jpg' | split: ','
-%}

<h2 class="cf-industry-hub__section-title">Essential Pizza Restaurant Equipment</h2>

<div class="cf-industry-hub__grid">
  {%- for handle in categories -%}
    {%- assign idx = forloop.index0 -%}
    {%- assign title = titles[idx] -%}
    {%- assign image_file = images[idx] -%}
    {%- assign collection = collections[handle] -%}

    <a href="/collections/{{ handle }}" class="cf-industry-hub__card">
      <div class="cf-industry-hub__card-image">
        {%- if collection != blank and collection.image -%}
          <img src="{{ collection.image | image_url: width: 400, height: 400, crop: 'center' }}" alt="{{ title }}" loading="lazy">
        {%- elsif collection != blank and collection.products_count > 0 -%}
          {%- comment %} Show slideshow of product images {% endcomment -%}
          <div class="cf-industry-hub__slideshow">
            {%- for product in collection.products limit: 5 -%}
              {%- if product.featured_image -%}
                <img
                  src="{{ product.featured_image | image_url: width: 400, height: 400, crop: 'center' }}"
                  alt="{{ product.title }}"
                  class="cf-industry-hub__slideshow-img{% if forloop.first %} active{% endif %}"
                  loading="lazy"
                >
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- else -%}
          <div style="width:100%;height:100%;background:linear-gradient(135deg,#f1f5f9 0%,#e2e8f0 100%);display:flex;align-items:center;justify-content:center;">
            <span style="font-size:14px;color:#94a3b8;">No Products</span>
          </div>
        {%- endif -%}
        <div class="cf-industry-hub__card-overlay">
          <span class="cf-industry-hub__card-overlay-text">{{ title }}</span>
        </div>
      </div>
      <div class="cf-industry-hub__card-content">
        <h3 class="cf-industry-hub__card-title">{{ title }}</h3>
        <span class="cf-industry-hub__card-btn">Shop Now</span>
      </div>
    </a>
  {%- endfor -%}
</div>
