{% comment %} CF Brand: Globe {% endcomment %}

{%- liquid
  assign globe_categories = 'globe-slicers,globe-mixer,globe-prep,globe-gas-cooking,globe-electric-cooking,globe-scales,globe-all-products' | split: ','
  assign globe_titles = 'Slicers,Mixers,Prep,Gas Cooking,Electric Cooking,Food Scale,Globe - All' | split: ','
  assign globe_images = 'Logo_Globe_500x500_89d114b2-d4df-447a-b914-a6ce3e2711aa.png,Logo_Globe_500x500_89d114b2-d4df-447a-b914-a6ce3e2711aa.png,Logo_Globe_500x500_89d114b2-d4df-447a-b914-a6ce3e2711aa.png,Logo_Globe_500x500_89d114b2-d4df-447a-b914-a6ce3e2711aa.png,Logo_Globe_500x500_89d114b2-d4df-447a-b914-a6ce3e2711aa.png,Logo_Globe_500x500_89d114b2-d4df-447a-b914-a6ce3e2711aa.png,Logo_Globe_500x500_89d114b2-d4df-447a-b914-a6ce3e2711aa.png' | split: ','
-%}

<div class="cf-brand-hub__grid">
  {%- for handle in globe_categories -%}
    {%- assign idx = forloop.index0 -%}
    {%- assign title = globe_titles[idx] -%}
    {%- assign image_file = globe_images[idx] -%}
    {%- assign cdn_url = 'https://celebratefestivalinc.com/cdn/shop/files/' | append: image_file | append: '?width=400&height=400&crop=center' -%}

    <a href="/collections/{{ handle }}" class="cf-brand-hub__card">
      <div class="cf-brand-hub__card-image">
        <img src="{{ cdn_url }}" alt="{{ title }}" loading="lazy">
        <div class="cf-brand-hub__card-overlay">
          <span class="cf-brand-hub__card-overlay-text">{{ title }}</span>
        </div>
      </div>
      <div class="cf-brand-hub__card-content">
        <h3 class="cf-brand-hub__card-title">{{ title }}</h3>
        <span class="cf-brand-hub__card-btn">Shop Now</span>
      </div>
    </a>
  {%- endfor -%}
</div>
