{%- comment -%}
  Hybrid Facets - Restaurant Equipment Theme

  Uses Dawn's core filtering logic + Custom restaurant equipment UI

  Supports:
  - Standard list filters (Vendor, Product Type, Tags)
  - Variant option filters (Size, Color, Material, etc.)
  - Price range filters
  - Swatch presentation for color options

  Accepts:
  - results: {Object} Collection or Search object
  - enable_filtering: {Boolean}
  - filter_type: {String}
  - enable_sorting: {Boolean}
  - is_mobile: {Boolean}
{%- endcomment -%}

{%- liquid
  assign sort_options = results.sort_options | default: collection.sort_options
  assign sort_by = results.sort_by | default: collection.sort_by | default: results.default_sort_by
  assign default_presentation = 'text'
-%}

<div class="facets-wrapper" id="main-collection-filters" data-id="{{ section.id }}">

  {%- unless results.filters == empty -%}
    <form id="FacetFiltersForm" class="facets-form">
      <div id="FacetsWrapperDesktop" class="facets-container">

        {%- for filter in results.filters -%}
          {%- liquid
            # Get the filter presentation type from Shopify (text, swatch, image)
            assign presentation = filter.presentation | default: default_presentation

            # Determine if this is a swatch/color filter
            assign is_swatch = false
            assign is_size = false
            assign is_variant_option = false

            # Check if this is a variant option filter (param_name starts with 'filter.v.option')
            if filter.param_name contains 'filter.v.option'
              assign is_variant_option = true
            endif

            # Check for swatch presentation or color-related filters
            if presentation == 'swatch'
              assign is_swatch = true
            elsif filter.label contains 'Color' or filter.label contains 'Colour' or filter.label contains 'Finish' or filter.param_name contains 'color'
              assign is_swatch = true
            endif

            # Check for size filters
            if filter.label contains 'Size' or filter.param_name contains 'size'
              assign is_size = true
            endif
          -%}

          <details
            id="Details-{{ forloop.index }}-{{ section.id }}"
            class="filter-section js-filter{% if is_variant_option %} filter-section--variant{% endif %}{% if is_swatch %} filter-section--swatch{% endif %}{% if is_size %} filter-section--size{% endif %}"
            data-index="{{ forloop.index }}"
            data-filter-type="{{ filter.type }}"
            data-is-variant="{{ is_variant_option }}"
            {% if forloop.index == 1 %}open{% endif %}
          >
            <summary class="filter-title">
              <div class="filter-title-wrapper">
                <span>{{ filter.label | escape }}</span>
                {%- if filter.active_values.size > 0 -%}
                  <span class="active-count">({{ filter.active_values.size }})</span>
                {%- endif -%}
              </div>
              <svg aria-hidden="true" focusable="false" class="icon icon-caret" viewBox="0 0 10 6">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor"/>
              </svg>
            </summary>

            <div id="Facet-{{ forloop.index }}-{{ section.id }}" class="filter-group">

              {%- case filter.type -%}
                {%- when 'boolean' or 'list' -%}

                  {%- if is_swatch -%}
                    {%- comment -%} Swatch/Color Display for variant options {%- endcomment -%}
                    <div class="filter-swatches">
                      {%- for filter_value in filter.values -%}
                        {%- liquid
                          assign is_disabled = false
                          if filter_value.count == 0 and filter_value.active == false
                            assign is_disabled = true
                          endif
                        -%}
                        <div class="swatch-item {% if filter_value.active %}active{% endif %} {% if is_disabled %}disabled{% endif %}">
                          <input
                            type="checkbox"
                            name="{{ filter_value.param_name }}"
                            value="{{ filter_value.value }}"
                            id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                            {% if filter_value.active %}checked{% endif %}
                            {% if is_disabled %}disabled{% endif %}
                          >
                          <label for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}" class="swatch-label" title="{{ filter_value.label | escape }}">
                            {%- liquid
                              assign color_name = filter_value.label | downcase | handleize
                            -%}

                            {%- if filter_value.swatch.image -%}
                              <span class="swatch-visual swatch-image">
                                <img src="{{ filter_value.swatch.image | image_url: width: 50 }}" alt="{{ filter_value.label }}" loading="lazy">
                              </span>
                            {%- elsif filter_value.swatch.color -%}
                              <span class="swatch-visual swatch-color" style="background-color: {{ filter_value.swatch.color }};"></span>
                            {%- else -%}
                              {%- comment -%} Fallback color mapping for common colors {%- endcomment -%}
                              {%- liquid
                                assign fallback_color = ''
                                case color_name
                                  when 'black'
                                    assign fallback_color = '#000000'
                                  when 'white'
                                    assign fallback_color = '#ffffff'
                                  when 'red'
                                    assign fallback_color = '#ff0000'
                                  when 'blue'
                                    assign fallback_color = '#0000ff'
                                  when 'green'
                                    assign fallback_color = '#00ff00'
                                  when 'yellow'
                                    assign fallback_color = '#ffff00'
                                  when 'orange'
                                    assign fallback_color = '#ff8000'
                                  when 'purple'
                                    assign fallback_color = '#800080'
                                  when 'pink'
                                    assign fallback_color = '#ffc0cb'
                                  when 'brown'
                                    assign fallback_color = '#8b4513'
                                  when 'gray', 'grey'
                                    assign fallback_color = '#808080'
                                  when 'silver'
                                    assign fallback_color = '#c0c0c0'
                                  when 'gold'
                                    assign fallback_color = '#ffd700'
                                  when 'navy'
                                    assign fallback_color = '#000080'
                                  when 'beige'
                                    assign fallback_color = '#f5f5dc'
                                endcase
                              -%}
                              {%- if fallback_color != blank -%}
                                <span class="swatch-visual swatch-color" style="background-color: {{ fallback_color }};"></span>
                              {%- else -%}
                                <span class="swatch-visual swatch-text">{{ filter_value.label | slice: 0, 2 | upcase }}</span>
                              {%- endif -%}
                            {%- endif -%}

                            <span class="swatch-name">{{ filter_value.label | escape }}</span>
                            {%- if filter_value.count > 0 -%}
                              <span class="swatch-count">({{ filter_value.count }})</span>
                            {%- endif -%}
                          </label>
                        </div>
                      {%- endfor -%}
                    </div>

                  {%- elsif is_size -%}
                    {%- comment -%} Size Checkbox Display with View More (Plus sign icon) {%- endcomment -%}
                    <ul class="filter-list" role="list">
                      {%- for filter_value in filter.values -%}
                        {%- liquid
                          assign is_disabled = false
                          if filter_value.count == 0 and filter_value.active == false
                            assign is_disabled = true
                          endif
                        -%}
                        <li class="filter-item{% if forloop.index > 10 %} filter-item--hidden{% endif %}">
                          <input
                            type="checkbox"
                            name="{{ filter_value.param_name }}"
                            value="{{ filter_value.value }}"
                            id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                            {% if filter_value.active %}checked{% endif %}
                            {% if is_disabled %}disabled{% endif %}
                          >
                          <label for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}" class="filter-label">
                            <span class="filter-checkbox filter-checkbox--plus {% if filter_value.active %}checked{% endif %}">
                              <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 1V11M1 6H11" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                              </svg>
                            </span>
                            <span class="filter-text">{{ filter_value.label | escape }}</span>
                            <span class="filter-count" data-count="{{ filter_value.count }}">({{ filter_value.count }})</span>
                          </label>
                        </li>
                      {%- endfor -%}
                    </ul>
                    {%- if filter.values.size > 10 -%}
                      <button type="button" class="filter-view-more" onclick="toggleFilterViewMore(this)">
                        View More ({{ filter.values.size | minus: 10 }})
                      </button>
                    {%- endif -%}

                  {%- else -%}
                    {%- comment -%} Standard Checkbox Display with View More {%- endcomment -%}
                    <ul class="filter-list" role="list">
                      {%- for filter_value in filter.values -%}
                        {%- liquid
                          assign is_disabled = false
                          if filter_value.count == 0 and filter_value.active == false
                            assign is_disabled = true
                          endif
                        -%}
                        <li class="filter-item{% if is_variant_option %} filter-item--variant{% endif %}{% if forloop.index > 10 %} filter-item--hidden{% endif %}">
                          <input
                            type="checkbox"
                            name="{{ filter_value.param_name }}"
                            value="{{ filter_value.value }}"
                            id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                            {% if filter_value.active %}checked{% endif %}
                            {% if is_disabled %}disabled{% endif %}
                          >
                          <label for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}" class="filter-label">
                            <span class="filter-checkbox {% if filter_value.active %}checked{% endif %}">
                              <svg width="12" height="9" viewBox="0 0 12 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1 4.5L4.5 8L11 1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            </span>
                            <span class="filter-text">
                              {{ filter_value.label | escape }}
                            </span>
                            <span class="filter-count" data-count="{{ filter_value.count }}">
                              ({{ filter_value.count }})
                            </span>
                          </label>
                        </li>
                      {%- endfor -%}
                    </ul>
                    {%- if filter.values.size > 10 -%}
                      <button type="button" class="filter-view-more" onclick="toggleFilterViewMore(this)">
                        View More ({{ filter.values.size | minus: 10 }})
                      </button>
                    {%- endif -%}
                  {%- endif -%}

                {%- when 'price_range' -%}
                  {%- liquid
                    assign currencies_using_comma_decimals = 'ANG,ARS,BRL,BYN,BYR,CLF,CLP,COP,CRC,CZK,DKK,EUR,HRK,HUF,IDR,ISK,MZN,NOK,PLN,RON,RUB,SEK,TRY,UYU,VES,VND' | split: ','
                    assign uses_comma_decimals = false
                    if currencies_using_comma_decimals contains cart.currency.iso_code
                      assign uses_comma_decimals = true
                    endif

                    assign filter_min_value = filter.min_value.value | default: 0 | divided_by: 100.0
                    assign filter_max_value = filter.max_value.value | default: filter.range_max | divided_by: 100.0
                    assign filter_range_min = filter.range_min | divided_by: 100.0
                    assign filter_range_max = filter.range_max | divided_by: 100.0
                  -%}

                  <div class="price-range" data-range-min="{{ filter_range_min }}" data-range-max="{{ filter_range_max }}">
                    <div class="price-inputs">
                      <div class="price-input-wrapper">
                        <span class="currency-symbol">{{ cart.currency.symbol }}</span>
                        <input
                          type="number"
                          name="{{ filter.min_value.param_name }}"
                          id="Filter-{{ filter.label | escape }}-min"
                          class="price-input price-input-min"
                          {%- if uses_comma_decimals -%}
                            placeholder="{{ filter_range_min | replace: '.', ',' }}"
                          {%- else -%}
                            placeholder="{{ filter_range_min }}"
                          {%- endif -%}
                          min="0"
                          {%- if uses_comma_decimals -%}
                            max="{{ filter_range_max | replace: '.', ',' }}"
                          {%- else -%}
                            max="{{ filter_range_max }}"
                          {%- endif -%}
                          {%- if filter.min_value.value -%}
                            {%- if uses_comma_decimals -%}
                              value="{{ filter_min_value | replace: '.', ',' }}"
                            {%- else -%}
                              value="{{ filter_min_value }}"
                            {%- endif -%}
                          {%- endif -%}
                        >
                      </div>

                      <span class="price-separator">-</span>

                      <div class="price-input-wrapper">
                        <span class="currency-symbol">{{ cart.currency.symbol }}</span>
                        <input
                          type="number"
                          name="{{ filter.max_value.param_name }}"
                          id="Filter-{{ filter.label | escape }}-max"
                          class="price-input price-input-max"
                          {%- if uses_comma_decimals -%}
                            placeholder="{{ filter_range_max | replace: '.', ',' }}"
                          {%- else -%}
                            placeholder="{{ filter_range_max }}"
                          {%- endif -%}
                          min="0"
                          {%- if uses_comma_decimals -%}
                            max="{{ filter_range_max | replace: '.', ',' }}"
                          {%- else -%}
                            max="{{ filter_range_max }}"
                          {%- endif -%}
                          {%- if filter.max_value.value -%}
                            {%- if uses_comma_decimals -%}
                              value="{{ filter_max_value | replace: '.', ',' }}"
                            {%- else -%}
                              value="{{ filter_max_value }}"
                            {%- endif -%}
                          {%- endif -%}
                        >
                      </div>
                    </div>

                    <div class="price-range-slider-container">
                      <div class="price-range-track">
                        <div class="price-range-fill"></div>
                        <div class="price-range-handle price-range-handle-min" data-handle="min">
                          <span class="price-range-tooltip"></span>
                        </div>
                        <div class="price-range-handle price-range-handle-max" data-handle="max">
                          <span class="price-range-tooltip"></span>
                        </div>
                      </div>
                    </div>
                  </div>

              {%- endcase -%}
            </div>
          </details>
        {%- endfor -%}

        {%- if is_mobile -%}
          <div class="filter-actions-mobile">
            <button type="button" class="btn btn-secondary btn-block" onclick="clearAllFilters()">
              Clear All
            </button>
            <button type="button" class="btn btn-primary btn-block" onclick="applyMobileFilters()">
              Apply Filters
            </button>
          </div>
        {%- endif -%}

      </div>

      {%- comment -%} Active Filters Display {%- endcomment -%}
      {%- if results.current_type == 'collection' or results.current_type == 'search' -%}
        <div class="active-facets active-facets-desktop">
          {%- for filter in results.filters -%}
            {%- for filter_value in filter.active_values -%}
              <a href="{{ filter_value.url_to_remove }}" class="active-facet">
                <span class="active-facet-label">{{ filter.label }}: {{ filter_value.label }}</span>
                <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                  <path d="M9 3L3 9M3 3L9 9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </a>
            {%- endfor -%}
          {%- endfor -%}
          
          {%- if results.filters.size > 0 -%}
            <a href="{{ results.url }}" class="active-facet-clear">Clear all</a>
          {%- endif -%}
        </div>
      {%- endif -%}

      <noscript>
        <button type="submit" class="btn btn-primary">Apply Filters</button>
      </noscript>
    </form>
  {%- endunless -%}
</div>

<script>
  class FacetFiltersForm extends HTMLElement {
    constructor() {
      super();
      this.filterData = [];
      this.onActiveFilterClick = this.onActiveFilterClick.bind(this);
      
      this.debouncedOnSubmit = this.debounce((event) => {
        this.onSubmitHandler(event);
      }, 500);

      this.querySelector('form').addEventListener('input', this.debouncedOnSubmit.bind(this));
      
      const facetWrapper = this.querySelector('#FacetsWrapperDesktop');
      if (facetWrapper) facetWrapper.addEventListener('keyup', this.onKeyUpHandler.bind(this));
    }

    debounce(fn, wait) {
      let t;
      return (...args) => {
        clearTimeout(t);
        t = setTimeout(() => fn.apply(this, args), wait);
      };
    }

    onSubmitHandler(event) {
      event.preventDefault();
      const formData = new FormData(event.target.closest('form'));
      const searchParams = new URLSearchParams(formData).toString();
      this.renderPage(searchParams, event);
    }

    onActiveFilterClick(event) {
      event.preventDefault();
      this.renderPage(new URL(event.currentTarget.href).searchParams.toString());
    }

    onKeyUpHandler(event) {
      if (event.code.toUpperCase() === 'ENTER') this.onSubmitHandler(event);
    }

    renderPage(searchParams, event) {
      const url = `${window.location.pathname}?${searchParams}`;
      
      // Show loading state
      document.getElementById('ProductGridContainer')?.classList.add('loading');
      
      fetch(url)
        .then(response => response.text())
        .then(responseText => {
          const html = new DOMParser().parseFromString(responseText, 'text/html');
          const resultsContainer = document.getElementById('ProductGridContainer');
          
          if (resultsContainer) {
            resultsContainer.innerHTML = html.getElementById('ProductGridContainer').innerHTML;
          }
          
          // Update URL without reload
          window.history.pushState({}, '', url);
          
          // Update active filters
          const activeFilters = html.querySelector('.active-facets');
          if (activeFilters) {
            document.querySelector('.active-facets').innerHTML = activeFilters.innerHTML;
          }
          
          // Remove loading state
          resultsContainer?.classList.remove('loading');
          
          // Scroll to top of results
          document.getElementById('ProductGridContainer')?.scrollIntoView({ behavior: 'smooth' });
        })
        .catch(error => {
          console.error('Filter error:', error);
          document.getElementById('ProductGridContainer')?.classList.remove('loading');
        });
    }
  }

  customElements.define('facet-filters-form', FacetFiltersForm);

  // Clear all filters
  function clearAllFilters() {
    window.location.href = window.location.pathname;
  }

  // Toggle View More for filter lists
  function toggleFilterViewMore(btn) {
    const filterList = btn.previousElementSibling;
    const hiddenItems = filterList.querySelectorAll('.filter-item--hidden');
    const isExpanded = filterList.classList.contains('expanded');

    if (isExpanded) {
      filterList.classList.remove('expanded');
      btn.textContent = `View More (${hiddenItems.length})`;
    } else {
      filterList.classList.add('expanded');
      btn.textContent = 'View Less';
    }
  }

  // Price Range Slider Functionality
  function initPriceRangeSliders() {
    const priceRanges = document.querySelectorAll('.price-range');
    console.log('üîç Facets: Found', priceRanges.length, 'price range sliders');
    priceRanges.forEach(priceRange => {
      // Skip if already initialized
      if (priceRange.dataset.initialized === 'true') {
        return;
      }
      priceRange.dataset.initialized = 'true';
      const minInput = priceRange.querySelector('.price-input-min');
      const maxInput = priceRange.querySelector('.price-input-max');
      const fill = priceRange.querySelector('.price-range-fill');
      const minHandle = priceRange.querySelector('.price-range-handle-min');
      const maxHandle = priceRange.querySelector('.price-range-handle-max');
      const minTooltip = minHandle?.querySelector('.price-range-tooltip');
      const maxTooltip = maxHandle?.querySelector('.price-range-tooltip');
      const track = priceRange.querySelector('.price-range-track');

      if (!minInput || !maxInput || !fill || !minHandle || !maxHandle || !track) return;

      const rangeMin = parseFloat(priceRange.dataset.rangeMin) || 0;
      const rangeMax = parseFloat(priceRange.dataset.rangeMax) || 10000;

      let isDragging = false;
      let currentHandle = null;

      function updateSlider() {
        const min = parseFloat(minInput.value) || rangeMin;
        const max = parseFloat(maxInput.value) || rangeMax;
        const range = rangeMax - rangeMin;

        if (range > 0) {
          const leftPercent = ((min - rangeMin) / range) * 100;
          const rightPercent = ((max - rangeMin) / range) * 100;

          fill.style.left = leftPercent + '%';
          fill.style.width = (rightPercent - leftPercent) + '%';

          minHandle.style.left = leftPercent + '%';
          maxHandle.style.left = rightPercent + '%';

          // Update tooltips
          if (minTooltip) minTooltip.textContent = '$' + Math.round(min);
          if (maxTooltip) maxTooltip.textContent = '$' + Math.round(max);
        }
      }

      function getValueFromPosition(clientX) {
        const rect = track.getBoundingClientRect();
        const percent = Math.max(0, Math.min(1, (clientX - rect.left) / rect.width));
        return rangeMin + (percent * (rangeMax - rangeMin));
      }

      function handleMove(e) {
        if (!isDragging || !currentHandle) return;

        e.preventDefault();
        const clientX = e.type.includes('touch') ? e.touches[0].clientX : e.clientX;
        const value = getValueFromPosition(clientX);

        if (currentHandle === minHandle) {
          const maxVal = parseFloat(maxInput.value) || rangeMax;
          const newMin = Math.min(value, maxVal);
          minInput.value = Math.round(newMin);
        } else {
          const minVal = parseFloat(minInput.value) || rangeMin;
          const newMax = Math.max(value, minVal);
          maxInput.value = Math.round(newMax);
        }

        updateSlider();
      }

      function handleEnd() {
        if (isDragging) {
          isDragging = false;
          currentHandle = null;
          document.body.style.userSelect = '';

          // Trigger form submit after drag ends
          const form = priceRange.closest('form');
          if (form) {
            const event = new Event('input', { bubbles: true });
            minInput.dispatchEvent(event);
          }
        }
      }

      function handleStart(handle) {
        return function(e) {
          isDragging = true;
          currentHandle = handle;
          document.body.style.userSelect = 'none';

          handle.classList.add('dragging');

          e.preventDefault();
        };
      }

      // Mouse events
      minHandle.addEventListener('mousedown', handleStart(minHandle));
      maxHandle.addEventListener('mousedown', handleStart(maxHandle));

      // Touch events
      minHandle.addEventListener('touchstart', handleStart(minHandle), { passive: false });
      maxHandle.addEventListener('touchstart', handleStart(maxHandle), { passive: false });

      // Global move and end events
      document.addEventListener('mousemove', handleMove);
      document.addEventListener('touchmove', handleMove, { passive: false });
      document.addEventListener('mouseup', handleEnd);
      document.addEventListener('touchend', handleEnd);

      // Track click to jump
      track.addEventListener('click', function(e) {
        if (e.target.classList.contains('price-range-handle')) return;

        const value = getValueFromPosition(e.clientX);
        const min = parseFloat(minInput.value) || rangeMin;
        const max = parseFloat(maxInput.value) || rangeMax;
        const midPoint = (min + max) / 2;

        if (value < midPoint) {
          minInput.value = Math.round(value);
        } else {
          maxInput.value = Math.round(value);
        }

        updateSlider();

        // Trigger form submit
        const form = priceRange.closest('form');
        if (form) {
          const event = new Event('input', { bubbles: true });
          minInput.dispatchEvent(event);
        }
      });

      // Update slider when inputs change
      minInput.addEventListener('input', updateSlider);
      maxInput.addEventListener('input', updateSlider);

      // Validate inputs on change
      minInput.addEventListener('change', function() {
        const min = parseFloat(this.value) || rangeMin;
        const max = parseFloat(maxInput.value) || rangeMax;
        if (min > max) {
          this.value = max;
          updateSlider();
        }
      });

      maxInput.addEventListener('change', function() {
        const min = parseFloat(minInput.value) || rangeMin;
        const max = parseFloat(this.value) || rangeMax;
        if (max < min) {
          this.value = min;
          updateSlider();
        }
      });

      // Cleanup dragging class on mouseup anywhere
      document.addEventListener('mouseup', function() {
        minHandle.classList.remove('dragging');
        maxHandle.classList.remove('dragging');
      });

      // Initialize
      updateSlider();
    });
  }

  // Handle checkbox state toggling
  function initCheckboxStateHandlers() {
    // Handle all filter checkboxes (standard, size, swatch)
    document.querySelectorAll('.filter-item input[type="checkbox"], .swatch-item input[type="checkbox"]').forEach(checkbox => {
      // Skip if already has event listener
      if (checkbox.dataset.listenerAdded === 'true') {
        return;
      }
      checkbox.dataset.listenerAdded = 'true';

      checkbox.addEventListener('change', function() {
        // Find the visual checkbox element
        const visualCheckbox = this.parentElement.querySelector('.filter-checkbox, .filter-checkbox--plus');

        if (visualCheckbox) {
          // Toggle the 'checked' class based on checkbox state
          if (this.checked) {
            visualCheckbox.classList.add('checked');
          } else {
            visualCheckbox.classList.remove('checked');
          }
        }

        // For swatch items, toggle active class on parent
        const swatchItem = this.closest('.swatch-item');
        if (swatchItem) {
          if (this.checked) {
            swatchItem.classList.add('active');
          } else {
            swatchItem.classList.remove('active');
          }
        }

        // For size items, toggle active class on parent
