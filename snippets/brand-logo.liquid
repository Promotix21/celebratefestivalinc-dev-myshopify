{% comment %} Set sizes based on parameter {% endcomment %}
{% assign logo_width = 150 %}
{% assign logo_height = 75 %}
{% case size %}
  {% when 'small' %}
    {% assign logo_width = 100 %}
    {% assign logo_height = 50 %}
  {% when 'large' %}
    {% assign logo_width = 200 %}
    {% assign logo_height = 100 %}
{% endcase %}

{% comment %} Output the logo {% endcomment %}
{% if brand_logo %}
  {% assign logo_url = brand_logo | asset_url %}
  {% if link %}
    {% assign brand_collection_url = '/collections/vendors?q=' | append: vendor | url_encode %}
    <a href="{{ brand_collection_url }}" class="brand-logo-link {{ class }}" title="Shop {{ vendor }} products">
      <img src="{{ logo_url }}"
           alt="{{ vendor }} logo"
           width="{{ logo_width }}"
           height="{{ logo_height }}"
           loading="lazy"
           class="brand-logo-img">
    </a>
  {% else %}
    <img src="{{ logo_url }}"
         alt="{{ vendor }} logo"
         width="{{ logo_width }}"
         height="{{ logo_height }}"
         loading="lazy"
         class="brand-logo-img {{ class }}">
  {% endif %}
{% else %}
  {% comment %} Fallback: show text-based logo {% endcomment %}
  {% if link %}
    {% assign brand_collection_url = '/collections/vendors?q=' | append: vendor | url_encode %}
    <a href="{{ brand_collection_url }}" class="brand-logo-link brand-logo-text {{ class }}" title="Shop {{ vendor }} products">
      {{ vendor }}
    </a>
  {% else %}
    <span class="brand-logo-text {{ class }}">{{ vendor }}</span>
  {% endif %}
{% endif %}
