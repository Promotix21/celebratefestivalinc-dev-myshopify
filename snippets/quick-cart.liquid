{%- comment -%}
  Quick Cart Drawer - Streamlined Design
  Clean, full-width layout with two action buttons
{%- endcomment -%}

<div class="cart-drawer" id="cartDrawer" onclick="if(event.target === this || event.target.classList.contains('cart-drawer-overlay')) closeCartDrawer()">
  <div class="cart-drawer-overlay"></div>

  <div class="cart-drawer-content">
    <!-- Header -->
    <div class="cart-drawer-header">
      <h2 class="cart-drawer-title">
        Shopping Cart
        {% if cart.item_count > 0 %}
          <span class="cart-count-badge">({{ cart.item_count }})</span>
        {% endif %}
      </h2>
      <button class="cart-drawer-close" id="cartDrawerClose" aria-label="Close cart">&times;</button>
    </div>

    <!-- Cart Items -->
    <div class="cart-drawer-body" id="cartDrawerBody">
      {% if cart.item_count > 0 %}
        <div class="cart-items">
          {% for item in cart.items %}
            <div class="cart-item" data-line="{{ forloop.index }}">
              <div class="cart-item-image">
                {% if item.image %}
                  <img src="{{ item.image | image_url: width: 120 }}" alt="{{ item.title | escape }}" loading="lazy">
                {% else %}
                  <div class="cart-item-placeholder"></div>
                {% endif %}
              </div>

              <div class="cart-item-info">
                <a href="{{ item.url }}" class="cart-item-title">{{ item.product.title }}</a>

                {% if item.variant.title != 'Default Title' %}
                  <div class="cart-item-variant">{{ item.variant.title }}</div>
                {% endif %}

                <div class="cart-item-bottom">
                  <div class="cart-item-qty">
                    <button class="qty-btn" onclick="updateQuantity({{ forloop.index }}, {{ item.quantity | minus: 1 }})" {% if item.quantity <= 1 %}disabled{% endif %}>âˆ’</button>
                    <input type="number" class="qty-input" value="{{ item.quantity }}" min="1" onchange="updateQuantity({{ forloop.index }}, this.value)">
                    <button class="qty-btn" onclick="updateQuantity({{ forloop.index }}, {{ item.quantity | plus: 1 }})">+</button>
                  </div>
                  <div class="cart-item-price">{{ item.final_line_price | money }}</div>
                </div>
              </div>

              <button class="cart-item-remove" onclick="removeFromCart({{ forloop.index }})" aria-label="Remove">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 6h18M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
                </svg>
              </button>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="cart-empty">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#ccc" stroke-width="1.5">
            <circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 002 1.61h9.72a2 2 0 002-1.61L23 6H6"/>
          </svg>
          <p>Your cart is empty</p>
        </div>
      {% endif %}
    </div>

    <!-- Footer -->
    {% if cart.item_count > 0 %}
      <div class="cart-drawer-footer">
        <div class="cart-subtotal">
          <span>Subtotal</span>
          <span class="cart-subtotal-price" id="cartSubtotal">{{ cart.total_price | money }}</span>
        </div>
        <p class="cart-tax-note">Taxes and shipping calculated at checkout</p>
        <div class="cart-buttons">
          <a href="/cart" class="cart-btn cart-btn-secondary">View Cart</a>
          <a href="/checkout" class="cart-btn cart-btn-primary">Checkout</a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
/* Cart Drawer Base */
.cart-drawer {
  position: fixed;
  inset: 0;
  z-index: 9999;
  visibility: hidden;
  pointer-events: none;
  transition: visibility 0s linear 0.3s;
}

.cart-drawer.active {
  visibility: visible;
  pointer-events: auto;
  transition: visibility 0s linear 0s;
}

.cart-drawer-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0);
  cursor: pointer;
  z-index: 1;
  pointer-events: auto;
  transition: background 0.3s ease-in-out;
}

.cart-drawer.active .cart-drawer-overlay {
  background: rgba(0, 0, 0, 0.4);
}

.cart-drawer-content {
  position: absolute;
  top: 0;
  right: 0;
  width: 420px;
  max-width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-shadow: -2px 0 10px rgba(0,0,0,0.1);
  z-index: 2;
  transform: translateX(100%);
  transition: transform 0.3s ease-in-out;
}

.cart-drawer.active .cart-drawer-content {
  transform: translateX(0);
}

/* Header */
.cart-drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #e5e5e5;
}

.cart-drawer-title {
  font-size: 18px;
  font-weight: 600;
  color: #1a365d;
  margin: 0;
}

.cart-count-badge {
  font-weight: 500;
  color: #666;
}

.cart-drawer-close {
  background: none;
  border: none;
  font-size: 28px;
  color: #666;
  cursor: pointer;
  padding: 0;
  line-height: 1;
}

.cart-drawer-close:hover {
  color: #333;
}

/* Body */
.cart-drawer-body {
  flex: 1;
  overflow-y: auto;
  padding: 0;
}

/* Cart Items */
.cart-items {
  display: flex;
  flex-direction: column;
}

.cart-item {
  display: grid;
  grid-template-columns: 60px 1fr 24px;
  gap: 10px;
  padding: 14px 16px;
  border-bottom: 1px solid #f0f0f0;
  align-items: start;
}

.cart-item-image {
  width: 60px;
  height: 60px;
  background: #f8f8f8;
  border-radius: 6px;
  overflow: hidden;
}

.cart-item-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.cart-item-placeholder {
  width: 100%;
  height: 100%;
  background: #eee;
}

.cart-item-info {
  min-width: 0;
}

.cart-item-title {
  font-family: 'DM Sans', sans-serif;
  font-size: 13px;
  font-weight: 500;
  color: #333;
  text-decoration: none;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.35;
  margin-bottom: 4px;
  word-break: break-word;
}

.cart-item-title:hover {
  color: #2d5a87;
}

.cart-item-variant {
  font-size: 11px;
  color: #888;
  margin-bottom: 8px;
}

.cart-item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
}

.cart-item-qty {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.qty-btn {
  width: 28px;
  height: 28px;
  background: none;
  border: none;
  font-size: 16px;
  cursor: pointer;
  color: #666;
}

.qty-btn:hover:not(:disabled) {
  background: #f5f5f5;
}

.qty-btn:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.qty-input {
  width: 36px;
  text-align: center;
  border: none;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  font-size: 13px;
  font-weight: 500;
  padding: 4px 0;
}

.qty-input::-webkit-inner-spin-button,
.qty-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
}

.cart-item-price {
  font-size: 14px;
  font-weight: 600;
  color: #1a365d;
}

.cart-item-remove {
  background: none;
  border: none;
  color: #999;
  cursor: pointer;
  padding: 4px;
  align-self: start;
  margin-top: 2px;
}

.cart-item-remove:hover {
  color: #dc2626;
}

/* Empty Cart */
.cart-empty {
  text-align: center;
  padding: 60px 20px;
  color: #888;
}

.cart-empty svg {
  margin-bottom: 16px;
}

.cart-empty p {
  font-size: 15px;
  margin: 0;
}

/* Footer */
.cart-drawer-footer {
  padding: 16px 20px;
  border-top: 1px solid #e5e5e5;
  background: #fafafa;
}

.cart-subtotal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.cart-subtotal span:first-child {
  font-size: 14px;
  color: #666;
}

.cart-subtotal-price {
  font-size: 18px;
  font-weight: 700;
  color: #1a365d;
}

.cart-tax-note {
  font-size: 12px;
  color: #888;
  margin: 0 0 16px 0;
}

.cart-buttons {
  display: flex;
  gap: 10px;
}

.cart-btn {
  flex: 1;
  padding: 12px 16px;
  font-size: 14px;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
}

.cart-btn-secondary {
  background: #fff;
  color: #1a365d;
  border: 2px solid #1a365d;
}

.cart-btn-secondary:hover {
  background: #1a365d;
  color: #fff;
}

.cart-btn-primary {
  background: #ff6b6b;
  color: #fff;
  border: 2px solid #ff6b6b;
}

.cart-btn-primary:hover {
  background: #e85555;
  border-color: #e85555;
}

/* Mobile */
@media (max-width: 480px) {
  .cart-drawer-content {
    width: 100%;
  }

  .cart-item {
    grid-template-columns: 60px 1fr 24px;
    gap: 10px;
    padding: 12px 16px;
  }

  .cart-item-image {
    width: 60px;
    height: 60px;
  }
}
</style>

<script>
function openCartDrawer() {
  document.getElementById('cartDrawer').classList.add('active');
  document.body.style.overflow = 'hidden';
}

function closeCartDrawer() {
  document.getElementById('cartDrawer').classList.remove('active');
  document.body.style.overflow = '';
}

function updateQuantity(line, quantity) {
  if (quantity < 0) return;
  fetch('/cart/change.js', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ line: line, quantity: parseInt(quantity) })
  })
  .then(r => r.json())
  .then(() => refreshCartDrawer());
}

function removeFromCart(line) {
  updateQuantity(line, 0);
}

function refreshCartDrawer() {
  fetch('/cart?view=drawer')
    .then(r => r.text())
    .then(html => {
      const doc = new DOMParser().parseFromString(html, 'text/html');
      const newBody = doc.querySelector('#cartDrawerBody');
      const newFooter = doc.querySelector('.cart-drawer-footer');
      if (newBody) document.getElementById('cartDrawerBody').innerHTML = newBody.innerHTML;
      const footer = document.querySelector('.cart-drawer-footer');
      if (newFooter && footer) footer.outerHTML = newFooter.outerHTML;
      else if (!newFooter && footer) footer.remove();
      updateCartCount();
    });
}

function updateCartCount() {
  fetch('/cart.js')
    .then(r => r.json())
    .then(cart => {
      document.querySelectorAll('.cart-count, .cart-count-badge').forEach(el => {
        el.textContent = cart.item_count > 0 ? `(${cart.item_count})` : '';
      });
      const subtotal = document.getElementById('cartSubtotal');
      if (subtotal) subtotal.textContent = Shopify.formatMoney ? Shopify.formatMoney(cart.total_price) : '$' + (cart.total_price / 100).toFixed(2);
    });
}

document.addEventListener('DOMContentLoaded', function() {
  // Close button
  document.getElementById('cartDrawerClose')?.addEventListener('click', closeCartDrawer);

  // Overlay click
  document.querySelector('.cart-drawer-overlay')?.addEventListener('click', closeCartDrawer);

  // ESC key
  document.addEventListener('keydown', e => {
    if (e.key === 'Escape' && document.getElementById('cartDrawer')?.classList.contains('active')) {
      closeCartDrawer();
    }
  });
});
</script>
