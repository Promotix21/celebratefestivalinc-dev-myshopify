{% comment %}
  Contact Us Page Template - contact.liquid
  Place this file in: themes/your-theme-name/templates/page.contact.liquid
{% endcomment %}

{% comment %} Page Settings - Replace with actual values {% endcomment %}
{% assign contact_phone = settings.contact_phone | default: "(408) 673-9999" %}
{% assign contact_email = settings.contact_email | default: "sales@celebratefestivalinc.com" %}
{% assign contact_address = settings.contact_address | default: "235 Whitney Pl, Fremont, CA 94539" %}
{% assign business_hours = settings.business_hours | default: "Mon-Fri: 9AM-6PM PST" %}

