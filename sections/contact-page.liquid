                                <circle cx="12" cy="12" r="10"/>
                                <line x1="12" y1="8" x2="12" y2="12"/>
                                <line x1="12" y1="16" x2="12.01" y2="16"/>
                            </svg>
                            <span>{{ form.errors | default_errors }}</span>
                        </div>
                    {% endif %}

                    <div class="form-section">
                        {% comment %} Form Type Selector {% endcomment %}
                        <div class="form-selector-wrapper">
                            <label for="formSelector" class="form-selector-label">Select Form Type:</label>
                            <select id="formSelector" class="form-selector" onchange="switchFormType(this.value)">
