                          <button class="btn btn-secondary wishlist-btn" onclick="toggleWishlist(this)">
                            <i class="fas fa-heart"></i>
                          </button>
                        </div>
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>

