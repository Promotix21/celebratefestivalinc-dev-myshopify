<!-- Custom Footer Section -->
<footer class="custom-footer">

  <!-- Newsletter Section -->
  {% if section.settings.show_newsletter %}
  <section class="newsletter" 
           style="padding: {{ section.settings.newsletter_padding_top }}px 0 {{ section.settings.newsletter_padding_bottom }}px;
                  {% if section.settings.newsletter_bg_type == 'gradient' %}background: linear-gradient(135deg, {{ section.settings.newsletter_bg_color }} 0%, {{ section.settings.newsletter_bg_color_2 }} 100%);{% else %}background: {{ section.settings.newsletter_bg_color }};{% endif %}
                  color: {{ section.settings.newsletter_text_color }};
                  text-align: center;">
    <div class="container" style="max-width: {{ section.settings.newsletter_max_width }}px; margin: 0 auto; padding: 0 20px;">
      
      {% if section.settings.newsletter_title != blank %}
      <h2 style="font-family: {{ section.settings.newsletter_title_font }}, serif;
                 font-size: {{ section.settings.newsletter_title_size }}px;
                 font-weight: {{ section.settings.newsletter_title_weight }};
                 margin-bottom: {{ section.settings.newsletter_title_margin }}px;
                 color: {{ section.settings.newsletter_title_color }};">
        {{ section.settings.newsletter_title }}
      </h2>
      {% endif %}
      
      {% if section.settings.newsletter_description != blank %}
      <p style="font-size: {{ section.settings.newsletter_description_size }}px;
                opacity: {{ section.settings.newsletter_description_opacity | divided_by: 100.0 }};
                margin-bottom: {{ section.settings.newsletter_description_margin }}px;
                color: {{ section.settings.newsletter_description_color }};">
        {{ section.settings.newsletter_description }}
      </p>
      {% endif %}
      
      <form class="newsletter-form" style="max-width: {{ section.settings.newsletter_form_width }}px; margin: 0 auto;">
        <div class="form-group" style="position: relative; display: flex; border-radius: {{ section.settings.newsletter_border_radius }}px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
          <input type="email" 
                 class="email-input" 
                 placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email address' }}"
                 required
                 style="flex: 1;
                        padding: {{ section.settings.newsletter_input_padding }}px 25px;
                        border: none;
                        outline: none;
                        font-size: {{ section.settings.newsletter_input_size }}px;
                        color: {{ section.settings.newsletter_input_text_color }};
                        background: {{ section.settings.newsletter_input_bg_color }};">
          <button type="submit" 
                  class="subscribe-btn"
                  style="background: {% if section.settings.newsletter_btn_bg_type == 'gradient' %}linear-gradient(135deg, {{ section.settings.newsletter_btn_bg_color }} 0%, {{ section.settings.newsletter_btn_bg_color_2 }} 100%){% else %}{{ section.settings.newsletter_btn_bg_color }}{% endif %};
                         color: {{ section.settings.newsletter_btn_text_color }};
                         border: none;
                         padding: {{ section.settings.newsletter_input_padding }}px 30px;
                         font-weight: {{ section.settings.newsletter_btn_weight }};
                         cursor: pointer;
                         transition: all 0.3s ease;
                         display: flex;
                         align-items: center;
                         gap: 10px;
                         font-size: {{ section.settings.newsletter_btn_size }}px;">
            <span>{{ section.settings.newsletter_btn_text | default: 'Subscribe' }}</span>
            <i class="fas fa-arrow-right"></i>
          </button>
        </div>
        
        {% if section.settings.newsletter_note != blank %}
        <p class="form-note" 
           style="font-size: {{ section.settings.newsletter_note_size }}px;
                  opacity: {{ section.settings.newsletter_note_opacity | divided_by: 100.0 }};
                  margin-top: {{ section.settings.newsletter_note_margin }}px;
                  color: {{ section.settings.newsletter_note_color }};">
          {{ section.settings.newsletter_note }}
        </p>
        {% endif %}
      </form>
    </div>
  </section>
  {% endif %}

<!-- Contact Bar -->
  {% if section.settings.show_contact_bar %}
  <section class="contact-bar" 
           style="{% if section.settings.contact_bar_bg_type == 'gradient' %}background: linear-gradient(135deg, {{ section.settings.contact_bar_bg_color }} 0%, {{ section.settings.contact_bar_bg_color_2 }} 100%);{% else %}background: {{ section.settings.contact_bar_bg_color }};{% endif %} 
                  padding: {{ section.settings.contact_bar_padding_top }}px 0 {{ section.settings.contact_bar_padding_bottom }}px;">
    <div class="contact-bar-container" style="max-width: {{ section.settings.contact_bar_max_width }}px; margin: 0 auto; padding: 0 20px;">
      
      {% if section.settings.contact_bar_title != blank %}
      <h3 style="text-align: center; 
                 font-family: {{ section.settings.contact_bar_title_font }}, serif;
                 font-size: {{ section.settings.contact_bar_title_size }}px;
                 font-weight: {{ section.settings.contact_bar_title_weight }};
                 margin-bottom: {{ section.settings.contact_bar_title_margin }}px;
                 color: {{ section.settings.contact_bar_title_color }};">
        {{ section.settings.contact_bar_title }}
      </h3>
      {% endif %}
      
      {% if section.settings.contact_bar_subtitle != blank %}
      <p style="text-align: center;
                font-size: 16px;
                color: rgba(255, 255, 255, 0.9);
                margin-bottom: 50px;
                max-width: 800px;
                margin-left: auto;
                margin-right: auto;">
        {{ section.settings.contact_bar_subtitle }}
      </p>
      {% endif %}
      
      <div class="contact-items" 
           style="display: grid; 
                  grid-template-columns: repeat({{ section.settings.contact_items_columns }}, 1fr);
                  gap: {{ section.settings.contact_items_gap }}px;
                  max-width: 1200px;
                  margin: 0 auto;">
        
        <!-- Phone Contact -->
        {% if section.settings.show_phone %}
        <div class="contact-item contact-card">
          <div class="contact-icon-wrapper">
            <i class="fas fa-phone"></i>
          </div>
          <h4 class="contact-label">{{ section.settings.phone_label }}</h4>
          <p class="contact-value">{{ section.settings.phone_number }}</p>
        </div>
        {% endif %}
        
        <!-- Email Contact -->
        {% if section.settings.show_email %}
        <div class="contact-item contact-card">
          <div class="contact-icon-wrapper">
            <i class="fas fa-envelope"></i>
          </div>
          <h4 class="contact-label">{{ section.settings.email_label }}</h4>
          <p class="contact-value">{{ section.settings.email_address }}</p>
        </div>
        {% endif %}
        
        <!-- Address Contact -->
        {% if section.settings.show_address %}
        <div class="contact-item contact-card">
          <div class="contact-icon-wrapper">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <h4 class="contact-label">{{ section.settings.address_label }}</h4>
          <p class="contact-value">{{ section.settings.address }}</p>
        </div>
        {% endif %}
        
        <!-- Hours Contact -->
        {% if section.settings.show_hours %}
        <div class="contact-item contact-card">
          <div class="contact-icon-wrapper">
            <i class="fas fa-clock"></i>
          </div>
          <h4 class="contact-label">{{ section.settings.hours_label }}</h4>
          <p class="contact-value">{{ section.settings.business_hours }}</p>
        </div>
        {% endif %}
        
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Footer Main -->
  <div class="footer-main" 
       style="{% if section.settings.footer_bg_image %}background-image: url('{{ section.settings.footer_bg_image | img_url: '1920x' }}');{% endif %}
              background-color: {{ section.settings.footer_bg_color }};
              background-size: cover;
              background-position: center;
              position: relative;
              padding: {{ section.settings.footer_padding_top }}px 0 {{ section.settings.footer_padding_bottom }}px;">
    
    <!-- Background Overlay -->
    {% if section.settings.show_footer_overlay %}
    <div style="position: absolute; 
                top: 0; 
                left: 0; 
                right: 0; 
                bottom: 0; 
                background: {{ section.settings.footer_overlay_color }}; 
                opacity: {{ section.settings.footer_overlay_opacity | divided_by: 100.0 }};
                z-index: 1;"></div>
    {% endif %}
    
    <div class="container" style="max-width: {{ section.settings.footer_max_width }}px; margin: 0 auto; padding: 0 20px; position: relative; z-index: 2;">
      <div class="footer-content" 
           style="display: grid;
                  grid-template-columns: {% if section.settings.footer_layout == 'balanced' %}1fr 2fr{% else %}1fr 1fr{% endif %};
                  gap: {{ section.settings.footer_content_gap }}px;">
        
        <!-- Footer Brand Section -->
        <div class="footer-brand" style="max-width: {{ section.settings.brand_section_max_width }}px;">
          <!-- Logo -->
          {% if section.settings.footer_logo %}
          <img src="{{ section.settings.footer_logo | img_url: section.settings.footer_logo_width | append: 'x' }}" 
               alt="{{ shop.name }}" 
               class="footer-logo" 
               style="width: {{ section.settings.footer_logo_width }}px;
                      height: auto;
                      margin-bottom: {{ section.settings.footer_logo_margin }}px;">
          {% endif %}
          
          <!-- Brand Description -->
          {% if section.settings.footer_description != blank %}
          <p style="color: {{ section.settings.footer_description_color }};
                    line-height: {{ section.settings.footer_description_line_height }};
                    margin-bottom: {{ section.settings.footer_description_margin }}px;
                    font-size: {{ section.settings.footer_description_size }}px;">
            {{ section.settings.footer_description }}
          </p>
          {% endif %}
          
          <!-- Social Links -->
          {% if section.settings.show_social_links %}
          <div class="social-links" 
               style="display: flex; 
                      gap: {{ section.settings.social_links_gap }}px;">
            
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'social_link' %}
                  {% if block.settings.social_url != blank %}
                  <a href="{{ block.settings.social_url }}" 
                     class="social-link social-link-{{ block.settings.social_platform }}"
                     target="_blank"
                     style="width: {{ section.settings.social_icon_size }}px;
                            height: {{ section.settings.social_icon_size }}px;
                            border-radius: 50%;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            text-decoration: none;
                            transition: all 0.3s ease;
                            font-size: {{ section.settings.social_icon_font_size }}px;
                            background: {{ section.settings.social_icon_bg_color }};
                            color: {{ section.settings.social_icon_color }};">
                    
                    {% case block.settings.social_platform %}
                      {% when 'facebook' %}
                        <i class="fab fa-facebook-f"></i>
                      {% when 'instagram' %}
                        <i class="fab fa-instagram"></i>
                      {% when 'linkedin' %}
                        <i class="fab fa-linkedin-in"></i>
                      {% when 'youtube' %}
                        <i class="fab fa-youtube"></i>
                      {% when 'twitter' %}
                        <i class="fab fa-twitter"></i>
                      {% when 'pinterest' %>
                        <i class="fab fa-pinterest"></i>
                      {% when 'tiktok' %}
                        <i class="fab fa-tiktok"></i>
                    {% endcase %}
                  </a>
                  {% endif %}
              {% endcase %}
            {% endfor %}
            
          </div>
          {% endif %}
        </div>
        
        <!-- Footer Links with SHOPIFY MENU INTEGRATION -->
        <div class="footer-links" 
             style="display: grid;
                    grid-template-columns: repeat({{ section.settings.footer_columns }}, 1fr);
                    gap: {{ section.settings.footer_links_gap }}px;
                    justify-items: {{ section.settings.footer_links_alignment }};">
          
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'menu_section' %}
                {% if block.settings.menu != blank %}
                <div class="footer-menu-section">
                  <!-- Desktop View -->
                  <div class="footer-menu-desktop">
                    {% if block.settings.section_title != blank %}
                    <h4 style="color: {{ section.settings.footer_section_title_color }};
                               font-weight: {{ section.settings.footer_section_title_weight }};
                               margin-bottom: {{ section.settings.footer_section_title_margin }}px;
                               font-size: {{ section.settings.footer_section_title_size }}px;">
                      {{ block.settings.section_title }}
                    </h4>
                    {% endif %}
                    
                    <ul style="list-style: none; margin: 0; padding: 0;">
                      {% for link in linklists[block.settings.menu].links %}
                      <li style="margin-bottom: {{ section.settings.footer_link_margin }}px;">
                        <a href="{{ link.url }}" 
                           style="color: {{ section.settings.footer_link_color }};
                                  text-decoration: none;
                                  transition: all 0.2s ease;
                                  font-size: {{ section.settings.footer_link_size }}px;">
                          {{ link.title }}
                        </a>
                      </li>
                      {% endfor %}
                    </ul>
                  </div>
                  
                  <!-- Mobile Accordion View -->
                  <div class="footer-menu-mobile">
                    {% if block.settings.section_title != blank %}
                    <div class="footer-accordion-header" data-accordion-trigger>
                      <h4 style="color: {{ section.settings.footer_section_title_color }};
                                 font-weight: {{ section.settings.footer_section_title_weight }};
                                 margin: 0;
                                 font-size: {{ section.settings.footer_section_title_size }}px;
                                 cursor: pointer;
                                 display: flex;
                                 justify-content: center;
                                 align-items: center;
                                 padding: 15px 0;
                                 gap: 10px;">
                        {{ block.settings.section_title }}
                        <i class="fas fa-chevron-down footer-accordion-icon" 
                           style="color: {{ section.settings.footer_section_title_color }};
                                  transition: transform 0.3s ease;
                                  font-size: 14px;"></i>
                      </h4>
                    </div>
                    {% endif %}
                    
                    <div class="footer-accordion-content" 
                         style="max-height: 0;
                                overflow: hidden;
                                transition: max-height 0.3s ease;">
                      <ul style="list-style: none; margin: 0; padding: 0 0 15px 0; text-align: center;">
                        {% for link in linklists[block.settings.menu].links %}
                        <li style="margin-bottom: {{ section.settings.footer_link_margin }}px;">
                          <a href="{{ link.url }}" 
                             style="color: {{ section.settings.footer_link_color }};
                                    text-decoration: none;
                                    transition: all 0.2s ease;
                                    font-size: {{ section.settings.footer_link_size }}px;">
                            {{ link.title }}
                          </a>
                        </li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
          
        </div>
      </div>
    </div>
  </div>
  
  <!-- Footer Bottom -->
  {% if section.settings.show_footer_bottom %}
  <div class="footer-bottom" 
       style="background: {{ section.settings.footer_bottom_bg_color }};
              padding: {{ section.settings.footer_bottom_padding }}px 0;
              border-top: {{ section.settings.footer_bottom_border_width }}px solid {{ section.settings.footer_bottom_border_color }};">
    <div class="container" style="max-width: {{ section.settings.footer_bottom_max_width }}px; margin: 0 auto; padding: 0 20px;">
      <div class="footer-bottom-content" 
           style="display: flex;
                  justify-content: space-between;
                  align-items: center;
                  font-size: {{ section.settings.footer_bottom_text_size }}px;
                  flex-wrap: wrap;
                  gap: 20px;">
        
        <!-- Copyright Text - LEFT SIDE -->
        <div class="copyright-section" style="flex: 1;">
          <p style="color: {{ section.settings.footer_bottom_text_color }}; margin: 0;">
            {% if section.settings.copyright_text != blank %}
              {{ section.settings.copyright_text }}
            {% else %}
              Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
            {% endif %}
          </p>
        </div>
        
        <!-- Right Side: Policy Links & Payment Methods -->
        <div class="right-section" style="display: flex; align-items: center; gap: 30px;">
          
          <!-- Policy Links -->
          {% if section.settings.show_policy_links %}
          <div class="policy-links" style="display: flex; align-items: center; gap: 15px;">
            {% if section.settings.privacy_policy_url != blank %}
            <a href="{{ section.settings.privacy_policy_url }}" 
               style="color: {{ section.settings.footer_bottom_link_color }}; text-decoration: none;">
              {{ section.settings.privacy_policy_text | default: 'Privacy Policy' }}
            </a>
            {% endif %}
            
            {% if section.settings.privacy_policy_url != blank and section.settings.terms_service_url != blank %}
            <span style="color: {{ section.settings.footer_bottom_text_color }};">|</span>
            {% endif %}
            
            {% if section.settings.terms_service_url != blank %}
            <a href="{{ section.settings.terms_service_url }}" 
               style="color: {{ section.settings.footer_bottom_link_color }}; text-decoration: none;">
              {{ section.settings.terms_service_text | default: 'Terms of Service' }}
            </a>
            {% endif %}
          </div>
          {% endif %}
          
          <!-- Payment Methods -->
          {% if section.settings.show_payment_methods %}
          <div class="payment-methods" 
               style="display: flex; 
                      gap: {{ section.settings.payment_methods_gap }}px;
                      align-items: center;">
            
            {% if section.settings.show_visa %}
            <i class="fab fa-cc-visa" style="font-size: {{ section.settings.payment_icon_size }}px; color: {{ section.settings.payment_icon_color }};"></i>
            {% endif %}
            
            {% if section.settings.show_mastercard %}
            <i class="fab fa-cc-mastercard" style="font-size: {{ section.settings.payment_icon_size }}px; color: {{ section.settings.payment_icon_color }};"></i>
            {% endif %}
            
            {% if section.settings.show_amex %}
            <i class="fab fa-cc-amex" style="font-size: {{ section.settings.payment_icon_size }}px; color: {{ section.settings.payment_icon_color }};"></i>
            {% endif %}
            
            {% if section.settings.show_paypal %}
            <i class="fab fa-cc-paypal" style="font-size: {{ section.settings.payment_icon_size }}px; color: {{ section.settings.payment_icon_color }};"></i>
            {% endif %}
            
            {% if section.settings.show_apple_pay %}
            <i class="fab fa-apple-pay" style="font-size: {{ section.settings.payment_icon_size }}px; color: {{ section.settings.payment_icon_color }};"></i>
            {% endif %}
            
            {% if section.settings.show_google_pay %}
            <i class="fab fa-google-pay" style="font-size: {{ section.settings.payment_icon_size }}px; color: {{ section.settings.payment_icon_color }};"></i>
            {% endif %}
            
          </div>
          {% endif %}
          
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</footer>

<!-- Custom Footer Styles & JavaScript -->
<style>
  /* Contact Bar Card Design */
  .custom-footer .contact-item.contact-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 15px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    min-height: 220px;
    width: 100%;
    max-width: 100%;
  }

  .custom-footer .contact-item.contact-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.12);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .custom-footer .contact-icon-wrapper {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
    transition: all 0.3s ease;
  }

  .custom-footer .contact-item.contact-card:hover .contact-icon-wrapper {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 20px rgba(255, 107, 107, 0.4);
  }

  .custom-footer .contact-icon-wrapper i {
    font-size: 28px;
    color: #ffffff;
  }

  .custom-footer .contact-card .contact-label {
    font-size: 18px;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
    letter-spacing: 0.5px;
    text-transform: capitalize;
  }

  .custom-footer .contact-card .contact-value {
    font-size: 15px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    line-height: 1.6;
  }

  /* Mobile Responsive for Contact Cards */
  @media (max-width: 1200px) {
    .custom-footer .contact-items {
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 25px !important;
      max-width: 600px;
    }
  }

  @media (max-width: 768px) {
    .custom-footer .contact-items {
      grid-template-columns: 1fr !important;
      gap: 20px !important;
      max-width: 400px;
    }

    .custom-footer .contact-item.contact-card {
      padding: 35px 25px;
      min-height: 200px;
    }

    .custom-footer .contact-icon-wrapper {
      width: 60px;
      height: 60px;
    }

    .custom-footer .contact-icon-wrapper i {
      font-size: 24px;
    }

    .custom-footer .contact-card .contact-label {
      font-size: 16px;
    }

    .custom-footer .contact-card .contact-value {
      font-size: 14px;
    }
  }

  /* Hover Effects */
  .custom-footer .social-link {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .custom-footer .social-link:hover {
    background: {{ section.settings.social_icon_hover_bg_color | default: '#ff6b6b' }} !important;
    color: {{ section.settings.social_icon_hover_color | default: '#ffffff' }} !important;
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(255, 107, 107, 0.3);
  }

  .custom-footer .footer-links a:hover {
    color: {{ section.settings.footer_link_hover_color | default: '#ff6b6b' }};
    padding-left: 5px;
  }

  .custom-footer .payment-methods i:hover {
    color: {{ section.settings.footer_link_hover_color | default: '#ff6b6b' }};
  }

  /* Mobile Accordion Styles */
  .footer-menu-mobile {
    display: none;
  }

  .footer-menu-desktop {
    display: block;
  }

  .footer-accordion-header {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-accordion-header.active .footer-accordion-icon {
    transform: rotate(180deg);
  }

  /* Contact Item Animation */
  .contact-item {
    transition: transform 0.3s ease;
  }

  .contact-item:hover {
    transform: translateY(-2px);
  }

  /* Newsletter Specific Styles */
  .newsletter {
    position: relative;
    z-index: 2;
  }

  .newsletter .form-group {
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .newsletter .subscribe-btn:hover {
    transform: scale(1.05);
  }

  .newsletter .email-input::placeholder {
    color: rgba(45, 55, 72, 0.6);
  }

  /* Mobile Responsive Design */
  @media (max-width: 1200px) {
    .custom-footer .container {
      max-width: 95vw !important;
    }
    
    .custom-footer .contact-items {
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 30px !important;
    }

    .custom-footer .footer-content {
      grid-template-columns: 1fr !important;
      gap: 40px !important;
    }
    
    .custom-footer .footer-links {
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 30px !important;
    }
  }

  @media (max-width: 992px) {
    .custom-footer .contact-items {
      grid-template-columns: 1fr !important;
      gap: 25px !important;
    }

    /* Switch to accordion on mobile */
    .footer-menu-mobile {
      display: block !important;
    }

    .footer-menu-desktop {
      display: none !important;
    }

    .custom-footer .footer-links {
      grid-template-columns: 1fr !important;
      gap: 0px !important;
    }

    .footer-menu-mobile .footer-accordion-header {
      text-align: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      margin: 0 auto;
      max-width: 300px;
    }
    
    .footer-menu-mobile .footer-accordion-content {
      text-align: center;
      margin: 0 auto;
      max-width: 300px;
    }
    
    .footer-accordion-icon {
      margin-left: 10px;
    }
  }

  @media (max-width: 768px) {
    .custom-footer .footer-content {
      text-align: center !important;
    }
    
    .custom-footer .footer-brand {
      max-width: 100% !important;
    }
    
    .custom-footer .footer-bottom-content {
      flex-direction: column !important;
      gap: 20px !important;
