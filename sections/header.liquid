          {% comment %} Render different menu types {% endcomment %}
          {% case menu_type %}
            {% when 'mega_menu' %}
              {% render 'mega-menu', link: link, block: block %}
            {% when 'logo_grid' %}
              {% render 'logo-grid-menu', link: link, block: block %}
