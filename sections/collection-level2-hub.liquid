                        {% endif %}
                      {% elsif is_member %}
                        {% comment %} Member without WSH - NOT "Member Price" label {% endcomment %}
                        <div class="cf-plp__price-label">{% if any_variant_has_compare_at %}Sale Price{% else %}Price{% endif %}</div>
                        <div class="cf-plp__price-main">
