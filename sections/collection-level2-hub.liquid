              {% assign opt_name_lower = opt_name | downcase %}
              {% comment %} Skip Shopify's default "Title" option (for single-variant products) {% endcomment %}
              {% unless opt_name_lower == 'title' %}
                {% unless variation_options contains opt_name %}
                  {% if variation_options == '' %}
                    {% assign variation_options = opt_name %}
                  {% else %}
                    {% assign variation_options = variation_options | append: '|||' | append: opt_name %}
                  {% endif %}
                {% endunless %}
              {% endunless %}
            {% endfor %}
          {% endfor %}
        {% endif %}
      {% endfor %}

      {% assign option_names_array = variation_options | split: '|||' %}

      {% comment %} Render each option type as a filter {% endcomment %}
      {% for opt_name in option_names_array limit: 5 %}
        {% assign option_values = '' %}
        {% assign numeric_values = '' %}
        {% assign is_numeric = false %}

        {% comment %} Collect all values for this option {% endcomment %}
        {% for handle in l3_handle_array limit: 5 %}
          {% assign handle_clean = handle | strip %}
          {% if handle_clean != blank %}
            {% assign coll = collections[handle_clean] %}
            {% for product in coll.products limit: 20 %}
              {% for option in product.options_with_values %}
                {% if option.name == opt_name %}
                  {% for val in option.values %}
                    {% unless option_values contains val %}
                      {% if option_values == '' %}
                        {% assign option_values = val %}
                      {% else %}
                        {% assign option_values = option_values | append: '|||' | append: val %}
                      {% endif %}
                    {% endunless %}
                  {% endfor %}
                {% endif %}
              {% endfor %}
            {% endfor %}
          {% endif %}
        {% endfor %}

        {% assign values_array = option_values | split: '|||' %}

        {% comment %} Check if values are numeric (contain numbers like 24", 36", etc.) {% endcomment %}
        {% assign numeric_count = 0 %}
        {% assign min_numeric = 99999 %}
        {% assign max_numeric = 0 %}
        {% for val in values_array %}
          {% assign clean_val = val | remove: '"' | remove: "'" | remove: ' inch' | remove: 'inch' | remove: ' in' | remove: 'in' | remove: ' ' %}
          {% assign num_val = clean_val | plus: 0 %}
          {% if num_val > 0 %}
            {% assign numeric_count = numeric_count | plus: 1 %}
            {% if num_val < min_numeric %}
              {% assign min_numeric = num_val %}
            {% endif %}
            {% if num_val > max_numeric %}
              {% assign max_numeric = num_val %}
            {% endif %}
          {% endif %}
        {% endfor %}

        {% if numeric_count > 2 and values_array.size > 2 %}
          {% assign is_numeric = true %}
        {% endif %}

        {% if values_array.size > 0 %}
          <div class="cf-plp__filter-group">
            <h3 class="cf-plp__filter-title">{{ opt_name }}</h3>

            {% if is_numeric %}
              {% comment %} Range Slider for Numeric Options {% endcomment %}
              <div class="cf-plp__range-filter" data-option="{{ opt_name | handleize }}">
                <div class="cf-plp__range-display">
                  <span class="cf-plp__range-min-val">{{ min_numeric }}"</span>
                  <span class="cf-plp__range-sep">to</span>
                  <span class="cf-plp__range-max-val">{{ max_numeric }}"</span>
                </div>
                <div class="cf-plp__range-slider-wrap">
                  <input type="range"
                         class="cf-plp__range-slider cf-plp__range-min"
                         min="{{ min_numeric }}"
                         max="{{ max_numeric }}"
                         value="{{ min_numeric }}"
                         data-option="{{ opt_name | handleize }}">
                  <input type="range"
                         class="cf-plp__range-slider cf-plp__range-max"
                         min="{{ min_numeric }}"
                         max="{{ max_numeric }}"
                         value="{{ max_numeric }}"
                         data-option="{{ opt_name | handleize }}">
                </div>
                <div class="cf-plp__range-labels">
                  <span>{{ min_numeric }}"</span>
                  <span>{{ max_numeric }}"</span>
                </div>
              </div>

              {% comment %} Also show quick select buttons {% endcomment %}
              <div class="cf-plp__quick-select">
                {% for val in values_array limit: 6 %}
                  <button type="button" class="cf-plp__quick-btn" data-option="{{ opt_name | handleize }}" data-value="{{ val }}">
                    {{ val }}
                  </button>
                {% endfor %}
              </div>
            {% else %}
              {% comment %} Checkboxes for Non-Numeric Options {% endcomment %}
              <ul class="cf-plp__filter-options">
                {% for val in values_array limit: 10 %}
                  <li>
                    <label class="cf-plp__filter-option">
                      <input type="checkbox" name="option_{{ opt_name | handleize }}" value="{{ val | handleize }}" data-option-handle="{{ opt_name | handleize }}" data-value="{{ val }}">
                      {{ val }}
                    </label>
                  </li>
                {% endfor %}
                {% if values_array.size > 10 %}
                  <li class="cf-plp__show-more">
                    <button type="button" class="cf-plp__show-more-btn" data-target="option_{{ opt_name | handleize }}">
                      + {{ values_array.size | minus: 10 }} more
                    </button>
                  </li>
                {% endif %}
              </ul>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </aside>

