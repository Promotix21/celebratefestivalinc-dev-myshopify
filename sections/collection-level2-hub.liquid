        {% comment %} Render products from all L3 collections for client-side filtering (balanced for performance and pagination) {% endcomment %}

        {% for handle in l3_handle_array %}
          {% assign handle_clean = handle | strip %}
          {% if handle_clean != blank %}
            {% assign l3_coll = collections[handle_clean] %}
            {% assign l3_category = l3_coll.title | remove: 'New Theme - ' | remove: 'New Theme- ' %}
            {% for product in l3_coll.products limit: 100 %}
              {% if product.price == 0 %}{% continue %}{% endif %}
              {% if products_shown < products_limit %}
                {% assign products_shown = products_shown | plus: 1 %}
                {% assign shipment_text = product.metafields.custom.shipment_text %}
                {% assign shipping_class = 'cf-plp__shipping--regular' %}
                {% if shipment_text contains 'Free' %}
                  {% assign shipping_class = 'cf-plp__shipping--free' %}
                {% elsif shipment_text contains 'Quick' %}
                  {% assign shipping_class = 'cf-plp__shipping--quick' %}
                {% endif %}

                {% comment %} Collect variant options for filtering {% endcomment %}
                {% assign variant_options_data = '' %}
                {% for option in product.options_with_values %}
                  {% assign opt_name_handle = option.name | handleize %}
                  {% assign opt_values_joined = option.values | join: ',' %}
                  {% if variant_options_data == '' %}
                    {% assign variant_options_data = opt_name_handle | append: ':' | append: opt_values_joined %}
                  {% else %}
