<script>
// Toggle About Category section (global function for onclick)
function toggleAboutCategory(btn) {
  const content = btn.nextElementSibling;
  const isExpanded = btn.getAttribute('aria-expanded') === 'true';

  btn.setAttribute('aria-expanded', !isExpanded);
  content.setAttribute('aria-hidden', isExpanded);
  btn.classList.toggle('expanded', !isExpanded);

  if (!isExpanded) {
    content.style.maxHeight = content.scrollHeight + 'px';
  } else {
    content.style.maxHeight = '0';
  }
}

// Mobile Filter Drawer Functions
function openMobileFilters() {
  const drawer = document.getElementById('mobile-filter-drawer');
  const content = document.getElementById('mobile-filter-content');
  const sidebar = document.querySelector('.cf-plp__sidebar');

  if (drawer && sidebar && content) {
    // Clone sidebar content if not already done
    if (!content.hasChildNodes()) {
      const clone = sidebar.cloneNode(true);
      clone.style.display = 'block';
      clone.style.width = '100%';
      clone.style.padding = '0';
      clone.style.background = 'transparent';
      content.appendChild(clone);

      // Sync checkbox states from original to clone
      syncFilterStates(sidebar, clone);

      // Add change listeners to cloned checkboxes
      clone.querySelectorAll('input[type="checkbox"]').forEach(cb => {
        cb.addEventListener('change', function() {
          // Find matching checkbox in original sidebar and trigger change
          const name = this.getAttribute('name');
          const value = this.getAttribute('value');
          const original = sidebar.querySelector(`input[name="${name}"][value="${value}"]`);
          if (original && original.checked !== this.checked) {
            original.checked = this.checked;
            original.dispatchEvent(new Event('change', { bubbles: true }));
          }
        });
      });
    } else {
      // Sync states before showing
      syncFilterStates(sidebar, content.firstChild);
    }

    drawer.classList.add('active');
    document.body.style.overflow = 'hidden';
  }
}

function closeMobileFilters() {
  const drawer = document.getElementById('mobile-filter-drawer');
  if (drawer) {
    drawer.classList.remove('active');
    document.body.style.overflow = '';
  }
}

function syncFilterStates(source, target) {
  source.querySelectorAll('input[type="checkbox"]').forEach(sourceCb => {
    const name = sourceCb.getAttribute('name');
    const value = sourceCb.getAttribute('value');
    const targetCb = target.querySelector(`input[name="${name}"][value="${value}"]`);
    if (targetCb) {
      targetCb.checked = sourceCb.checked;
    }
  });
}

document.addEventListener('DOMContentLoaded', function() {
  'use strict';

  // Filter State
  const filterState = {
    category: 'all',
    brands: [],
    productTypes: [],
    priceRanges: [],
    options: {},
    optionRanges: {}
  };

  // Pagination State
  const paginationState = {
    currentPage: 1,
    itemsPerPage: {{ section.settings.products_per_page | default: 48 }},
    totalPages: 1,
    filteredCards: []
  };

  // Product Data Cache (Optimization)
  let productData = [];

  const resultsCount = document.querySelector('.cf-plp__results-count strong');
  const paginationContainer = document.getElementById('pagination');
  const pageNumbersContainer = document.getElementById('page-numbers');
  const prevBtn = document.getElementById('prev-page');
  const nextBtn = document.getElementById('next-page');
  const activeFiltersContainer = document.getElementById('active-filters');
  const activeFiltersList = document.getElementById('active-filters-list');
  const clearAllBtn = document.getElementById('clear-all-filters');

  // Initialize Data Cache
  function initProductData() {
    const cards = document.querySelectorAll('.cf-plp__card');
    productData = Array.from(cards).map((card, idx) => {
      // Pre-parse price to avoid parsing in loop
      const priceRaw = card.dataset.price;
      const price = priceRaw ? (parseInt(priceRaw) / 100) : 0;

      return {
        element: card,
        category: card.dataset.category,
        vendor: card.dataset.vendor, // handleized
        productType: card.dataset.type, // handleized
        price: price,
        title: (card.dataset.title || '').toLowerCase(),
        originalIndex: idx,
        optionsStr: card.dataset.options,
        // Lazy-loaded options cache
        _options: null
      };
    });
    console.log('CF-PLP: Data initialized for', productData.length, 'products');
  }

  // Get parsed options (Lazy Load)
  function getProductOptions(product) {
    if (product._options) return product._options;
    
    if (!product.optionsStr) {
      product._options = {};
      return product._options;
    }

    const result = {};
    // Format: "color:red,blue|size:small,medium"
    product.optionsStr.split('|').forEach(optGroup => {
      const [name, values] = optGroup.split(':');
      if (name && values) {
        // Store both handled values for matching
        result[name] = values.split(',').map(v => v.trim());
      }
    });
    product._options = result;
    return result;
  }

  // Extract numeric value from string (e.g., "24"" -> 24)
  function extractNumeric(val) {
    const cleaned = val.replace(/[^\d.]/g, '');
    return parseFloat(cleaned) || 0;
  }

  // Update active filters display
  function updateActiveFiltersDisplay() {
    if (!activeFiltersContainer) return;
    
    const activeChips = [];

    // Category filter (skip if 'all')
    if (filterState.category !== 'all') {
      const categoryPill = document.querySelector(`.cf-plp__pill[data-filter="${filterState.category}"]`);
      const categoryName = categoryPill ? categoryPill.textContent.trim() : filterState.category;
      activeChips.push({
        type: 'category',
        label: `Category: ${categoryName}`,
        value: filterState.category
      });
    }

    // Brand filters
    filterState.brands.forEach(brand => {
      const brandCheckbox = document.querySelector(`input[name="brand"][value="${brand}"]`);
      const brandLabel = brandCheckbox ? brandCheckbox.parentElement.textContent.trim() : brand;
      activeChips.push({
        type: 'brand',
        label: `Brand: ${brandLabel}`,
        value: brand
      });
    });

    // Product Type filters
    filterState.productTypes.forEach(type => {
      const typeCheckbox = document.querySelector(`input[name="product-type"][value="${type}"]`);
      const typeLabel = typeCheckbox ? typeCheckbox.parentElement.textContent.trim() : type;
      activeChips.push({
        type: 'productType',
        label: `Type: ${typeLabel}`,
        value: type
      });
    });

    // Price range filters
    filterState.priceRanges.forEach(range => {
      let rangeLabel = '';
      if (range === '0-500') rangeLabel = 'Under $500';
      else if (range === '500-1000') rangeLabel = '$500 - $1,000';
      else if (range === '1000-2500') rangeLabel = '$1,000 - $2,500';
      else if (range === '2500+') rangeLabel = '$2,500+';

      activeChips.push({
        type: 'price',
        label: `Price: ${rangeLabel}`,
        value: range
      });
    });

    // Option filters
    for (const [optName, selectedVals] of Object.entries(filterState.options)) {
      if (selectedVals.length > 0) {
        selectedVals.forEach(val => {
          activeChips.push({
            type: 'option',
            label: `${optName}: ${val}`,
            value: val,
            optName: optName
          });
        });
      }
    }

    // Option range filters
    for (const [optName, range] of Object.entries(filterState.optionRanges)) {
      activeChips.push({
        type: 'range',
        label: `${optName}: ${range.min}" - ${range.max}"`,
        value: optName
      });
    }

    // Show/hide active filters section
    if (activeChips.length > 0) {
      activeFiltersContainer.style.display = 'block';
      // Render chips
      if (activeFiltersList) {
        activeFiltersList.innerHTML = activeChips.map(chip => `
          <div class="cf-plp__filter-chip" data-type="${chip.type}" data-value="${chip.value}" ${chip.optName ? `data-opt-name="${chip.optName}"` : ''}>
            <span>${chip.label}</span>
            <span class="cf-plp__filter-chip-remove" onclick="removeFilter('${chip.type}', '${chip.value}', '${chip.optName || ''}')">√ó</span>
          </div>
        `).join('');
      }
    } else {
      activeFiltersContainer.style.display = 'none';
    }
  }

  // Remove individual filter (Global for onclick access)
  window.removeFilter = function(type, value, optName) {
    if (type === 'category') {
      filterState.category = 'all';
      document.querySelectorAll('.cf-plp__pill').forEach(p => p.classList.remove('active'));
      const allPill = document.querySelector('.cf-plp__pill[data-filter="all"]');
      if (allPill) allPill.classList.add('active');
    } else if (type === 'brand') {
      filterState.brands = filterState.brands.filter(b => b !== value);
      const checkbox = document.querySelector(`input[name="brand"][value="${value}"]`);
      if (checkbox) checkbox.checked = false;
    } else if (type === 'productType') {
      filterState.productTypes = filterState.productTypes.filter(t => t !== value);
      const checkbox = document.querySelector(`input[name="product-type"][value="${value}"]`);
      if (checkbox) checkbox.checked = false;
    } else if (type === 'price') {
      filterState.priceRanges = filterState.priceRanges.filter(p => p !== value);
      const checkbox = document.querySelector(`input[name="price"][value="${value}"]`);
      if (checkbox) checkbox.checked = false;
    } else if (type === 'option') {
      if (filterState.options[optName]) {
        filterState.options[optName] = filterState.options[optName].filter(v => v !== value);
      }
      const checkbox = document.querySelector(`input[data-option="${optName}"][value="${value}"]`);
      if (checkbox) checkbox.checked = false;
    } else if (type === 'range') {
      delete filterState.optionRanges[value];
      // Reset sliders
      const rangeWrap = document.querySelector(`.cf-plp__range-filter[data-option="${value}"]`);
      if (rangeWrap) {
        const minSlider = rangeWrap.querySelector('.cf-plp__range-min');
        const maxSlider = rangeWrap.querySelector('.cf-plp__range-max');
        if (minSlider) minSlider.value = minSlider.min;
        if (maxSlider) maxSlider.value = maxSlider.max;
      }
      // Deactivate quick buttons
      document.querySelectorAll(`.cf-plp__quick-btn[data-option="${value}"]`).forEach(btn => {
        btn.classList.remove('active');
      });
    }

    applyFilters();
  };

  // Clear all filters
  if (clearAllBtn) {
    clearAllBtn.addEventListener('click', function() {
      // Reset filter state
      filterState.category = 'all';
      filterState.brands = [];
      filterState.productTypes = [];
      filterState.priceRanges = [];
      filterState.options = {};
      filterState.optionRanges = {};

      // Reset UI
      document.querySelectorAll('.cf-plp__pill').forEach(p => p.classList.remove('active'));
      const allPill = document.querySelector('.cf-plp__pill[data-filter="all"]');
      if (allPill) allPill.classList.add('active');
      
      document.querySelectorAll('.cf-plp__sidebar input[type="checkbox"]').forEach(cb => cb.checked = false);
      document.querySelectorAll('.cf-plp__quick-btn').forEach(btn => btn.classList.remove('active'));

      // Reset sliders
      document.querySelectorAll('.cf-plp__range-filter').forEach(rangeWrap => {
        const minSlider = rangeWrap.querySelector('.cf-plp__range-min');
        const maxSlider = rangeWrap.querySelector('.cf-plp__range-max');
        const minDisplay = rangeWrap.querySelector('.cf-plp__range-min-val');
        const maxDisplay = rangeWrap.querySelector('.cf-plp__range-max-val');
        if (minSlider) {
          minSlider.value = minSlider.min;
          if (minDisplay) minDisplay.textContent = minSlider.min + '"';
        }
        if (maxSlider) {
          maxSlider.value = maxSlider.max;
          if (maxDisplay) maxDisplay.textContent = maxSlider.max + '"';
        }
      });

      applyFilters();
    });
  }

  // Apply all filters (Optimized for Speed)
  function applyFilters(resetPage = true) {
    paginationState.filteredCards = [];
    
    // Check if filters are active
    const hasCategory = filterState.category !== 'all';
    const hasBrands = filterState.brands.length > 0;
    const hasProductTypes = filterState.productTypes.length > 0;
    const hasPrices = filterState.priceRanges.length > 0;
    const hasOptions = Object.keys(filterState.options).length > 0;
    const hasRanges = Object.keys(filterState.optionRanges).length > 0;

    // Use fast iteration over cached data
    for (let i = 0; i < productData.length; i++) {
      const p = productData[i];
      let visible = true;

      // Category
      if (hasCategory && p.category !== filterState.category) visible = false;

      // Brand
      if (visible && hasBrands && !filterState.brands.includes(p.vendor)) visible = false;

      // Product Type
      if (visible && hasProductTypes && !filterState.productTypes.includes(p.productType)) visible = false;

      // Price
      if (visible && hasPrices) {
        let priceMatch = false;
        for (const range of filterState.priceRanges) {
          if (range === '0-500' && p.price < 500) { priceMatch = true; break; }
          if (range === '500-1000' && p.price >= 500 && p.price < 1000) { priceMatch = true; break; }
          if (range === '1000-2500' && p.price >= 1000 && p.price < 2500) { priceMatch = true; break; }
          if (range === '2500+' && p.price >= 2500) { priceMatch = true; break; }
        }
        if (!priceMatch) visible = false;
      }

      // Options
      if (visible && hasOptions) {
        const opts = getProductOptions(p);
        for (const [optName, selectedVals] of Object.entries(filterState.options)) {
          if (selectedVals.length > 0) {
            const productVals = opts[optName] || [];
            // Values are strings, need flexible matching (case insensitive, handleized)
            const pValsHandled = productVals.map(v => v.toLowerCase().replace(/[^a-z0-9]/g, '-'));
            let optMatch = false;
            for (const selVal of selectedVals) {
              const selValHandled = selVal.toLowerCase().replace(/[^a-z0-9]/g, '-');
              if (pValsHandled.some(pv => pv.includes(selValHandled) || selValHandled.includes(pv))) {
                optMatch = true;
                break;
              }
            }
            if (!optMatch) { visible = false; break; }
          }
        }
      }

      // Ranges
      if (visible && hasRanges) {
        const opts = getProductOptions(p);
        for (const [optName, range] of Object.entries(filterState.optionRanges)) {
          const productVals = opts[optName] || [];
          let rangeMatch = false;
          for (const val of productVals) {
            const num = extractNumeric(val);
            if (num >= range.min && num <= range.max) {
              rangeMatch = true;
              break;
            }
          }
          if (!rangeMatch) { visible = false; break; }
        }
      }

      if (visible) {
        paginationState.filteredCards.push(p.element);
      } else {
        // Hide immediately to be safe, though pagination handles display
        p.element.style.display = 'none';
      }
    }

    if (resetPage) {
      paginationState.currentPage = 1;
    }

    updateActiveFiltersDisplay();
    applyPagination();
  }

  // Apply pagination to filtered cards
  function applyPagination() {
    const { filteredCards, currentPage, itemsPerPage } = paginationState;
    const totalItems = filteredCards.length;
    paginationState.totalPages = Math.ceil(totalItems / itemsPerPage);

    // Update results count
    if (resultsCount) resultsCount.textContent = totalItems;

    // Show only current page items
    const startIndex = (currentPage - 1) * itemsPerPage;
    const endIndex = startIndex + itemsPerPage;

    // Batch DOM updates using requestAnimationFrame for smoothness
    requestAnimationFrame(() => {
      // Hide all first (already done in filter loop, but safety check for previous page)
      // Actually, filteredCards contains ALL visible items.
      // We need to show the slice and hide the rest of filteredCards.
      // Items NOT in filteredCards are already hidden.
      
      for (let i = 0; i < filteredCards.length; i++) {
        if (i >= startIndex && i < endIndex) {
          filteredCards[i].style.display = '';
        } else {
          filteredCards[i].style.display = 'none';
        }
      }
    });

    renderPagination();
  }

  // Render pagination buttons
  function renderPagination() {
    if (!paginationContainer) return;
    const { currentPage, totalPages } = paginationState;

    if (totalPages <= 1) {
      paginationContainer.style.display = 'none';
      return;
    }
    paginationContainer.style.display = 'flex';

    if (prevBtn) prevBtn.disabled = currentPage === 1;
    if (nextBtn) nextBtn.disabled = currentPage === totalPages;

    if (pageNumbersContainer) {
      pageNumbersContainer.innerHTML = '';
      const maxVisible = 5;
      let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
      let endPage = Math.min(totalPages, startPage + maxVisible - 1);

      if (endPage - startPage < maxVisible - 1) {
        startPage = Math.max(1, endPage - maxVisible + 1);
      }

      if (startPage > 1) {
        pageNumbersContainer.appendChild(createPageButton(1));
        if (startPage > 2) {
          const ellipsis = document.createElement('span');
          ellipsis.className = 'cf-plp__page-ellipsis';
          ellipsis.textContent = '...';
          pageNumbersContainer.appendChild(ellipsis);
        }
      }

      for (let i = startPage; i <= endPage; i++) {
        pageNumbersContainer.appendChild(createPageButton(i));
      }

      if (endPage < totalPages) {
        if (endPage < totalPages - 1) {
          const ellipsis = document.createElement('span');
          ellipsis.className = 'cf-plp__page-ellipsis';
          ellipsis.textContent = '...';
          pageNumbersContainer.appendChild(ellipsis);
        }
        pageNumbersContainer.appendChild(createPageButton(totalPages));
      }
    }
  }

  function createPageButton(pageNum) {
    const btn = document.createElement('button');
    btn.type = 'button';
    btn.className = 'cf-plp__page-num' + (pageNum === paginationState.currentPage ? ' active' : '');
    btn.textContent = pageNum;
    btn.addEventListener('click', () => goToPage(pageNum));
    return btn;
  }

  function goToPage(pageNum) {
    paginationState.currentPage = pageNum;
    applyPagination();
    const productsContainer = document.querySelector('.cf-plp__products');
    if (productsContainer) {
      productsContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  }

  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      if (paginationState.currentPage > 1) goToPage(paginationState.currentPage - 1);
    });
  }

  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      if (paginationState.currentPage < paginationState.totalPages) goToPage(paginationState.currentPage + 1);
    });
  }

  // View Toggle (Grid/List)
  const productGrid = document.getElementById('product-grid');
  document.querySelectorAll('.cf-plp__view-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      document.querySelectorAll('.cf-plp__view-btn').forEach(b => b.classList.remove('active'));
      this.classList.add('active');

      const viewType = this.dataset.view;
      if (viewType === 'list' && productGrid) {
        productGrid.classList.add('list-view');
      } else if (productGrid) {
        productGrid.classList.remove('list-view');
      }
    });
  });

  // Category Pills (skip link pills - they navigate to another page)
  document.querySelectorAll('.cf-plp__pill:not(.cf-plp__pill--link)').forEach(pill => {
    pill.addEventListener('click', function() {
      document.querySelectorAll('.cf-plp__pill').forEach(p => p.classList.remove('active'));
      this.classList.add('active');
      filterState.category = this.dataset.filter;
      applyFilters();
    });
  });

  // Brand Checkboxes
  document.querySelectorAll('input[name="brand"]').forEach(cb => {
    cb.addEventListener('change', function() {
      if (this.checked) {
        filterState.brands.push(this.value);
      } else {
        filterState.brands = filterState.brands.filter(b => b !== this.value);
      }
      applyFilters();
    });
  });

  // Product Type Checkboxes
  document.querySelectorAll('input[name="product-type"]').forEach(cb => {
    cb.addEventListener('change', function() {
      if (this.checked) {
        filterState.productTypes.push(this.value);
      } else {
        filterState.productTypes = filterState.productTypes.filter(t => t !== this.value);
      }
      applyFilters();
    });
  });

  // Price Range Checkboxes
  document.querySelectorAll('input[name="price"]').forEach(cb => {
    cb.addEventListener('change', function() {
      if (this.checked) {
        filterState.priceRanges.push(this.value);
      } else {
        filterState.priceRanges = filterState.priceRanges.filter(p => p !== this.value);
      }
      applyFilters();
    });
  });

  // Option Checkboxes (variation filters)
  document.querySelectorAll('.cf-plp__filter-options input[type="checkbox"][data-option-handle]').forEach(cb => {
    cb.addEventListener('change', function() {
      const optName = this.dataset.optionHandle;
      if (!filterState.options[optName]) filterState.options[optName] = [];

      if (this.checked) {
        filterState.options[optName].push(this.value);
      } else {
        filterState.options[optName] = filterState.options[optName].filter(v => v !== this.value);
      }
      applyFilters();
    });
  });

  // Range Sliders
  document.querySelectorAll('.cf-plp__range-filter').forEach(rangeWrap => {
    const optName = rangeWrap.dataset.option;
    const minSlider = rangeWrap.querySelector('.cf-plp__range-min');
    const maxSlider = rangeWrap.querySelector('.cf-plp__range-max');
    const minDisplay = rangeWrap.querySelector('.cf-plp__range-min-val');
    const maxDisplay = rangeWrap.querySelector('.cf-plp__range-max-val');

    if (minSlider && maxSlider) {
      const updateRange = () => {
        let minVal = parseInt(minSlider.value);
        let maxVal = parseInt(maxSlider.value);

        // Prevent crossover
        if (minVal > maxVal) {
          [minVal, maxVal] = [maxVal, minVal];
        }

        if (minDisplay) minDisplay.textContent = minVal + '"';
        if (maxDisplay) maxDisplay.textContent = maxVal + '"';

        filterState.optionRanges[optName] = { min: minVal, max: maxVal };
        applyFilters(); // Note: for smoother sliders, might want to debounce this
      };

      minSlider.addEventListener('input', updateRange);
      maxSlider.addEventListener('input', updateRange);
    }
  });

  // Quick Select Buttons
  document.querySelectorAll('.cf-plp__quick-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const optName = this.dataset.option;
      
      // Toggle active state
      this.classList.toggle('active');

      // Update range slider if exists
      const rangeWrap = document.querySelector(`.cf-plp__range-filter[data-option="${optName}"]`);
      if (rangeWrap) {
        const minSlider = rangeWrap.querySelector('.cf-plp__range-min');
        const maxSlider = rangeWrap.querySelector('.cf-plp__range-max');
        const minDisplay = rangeWrap.querySelector('.cf-plp__range-min-val');
        const maxDisplay = rangeWrap.querySelector('.cf-plp__range-max-val');

        // If button is active, set both to same value
        const activeButtons = document.querySelectorAll(`.cf-plp__quick-btn[data-option="${optName}"].active`);
        if (activeButtons.length > 0) {
          const activeVals = Array.from(activeButtons).map(b => extractNumeric(b.dataset.value));
          const minActive = Math.min(...activeVals);
          const maxActive = Math.max(...activeVals);

          if (minSlider) minSlider.value = minActive;
          if (maxSlider) maxSlider.value = maxActive;
          if (minDisplay) minDisplay.textContent = minActive + '"';
          if (maxDisplay) maxDisplay.textContent = maxActive + '"';

          filterState.optionRanges[optName] = { min: minActive, max: maxActive };
        } else {
          // Reset to full range
          if (minSlider) minSlider.value = minSlider.min;
          if (maxSlider) maxSlider.value = maxSlider.max;
          if (minDisplay) minDisplay.textContent = minSlider.min + '"';
          if (maxDisplay) maxDisplay.textContent = maxSlider.max + '"';
          delete filterState.optionRanges[optName];
        }
      }

      applyFilters();
    });
  });

  // Add to Cart - triggers cart drawer/notification
  document.querySelectorAll('.cf-plp__add-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const variantId = this.dataset.variantId;
      const card = this.closest('.cf-plp__card');
      const qty = card ? parseInt(card.querySelector('.cf-plp__qty-input').value) || 1 : 1;
      const button = this;

      button.disabled = true;
      button.textContent = 'Adding...';

      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: parseInt(variantId), quantity: qty })
      })
      .then(res => {
        if (!res.ok) throw new Error('Add to cart failed');
        return res.json();
      })
      .then(data => {
        button.textContent = 'Added!';
        button.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';

        // Update cart count in header
        if (window.updateCartCount) window.updateCartCount();
        else {
           fetch('/cart.js').then(r => r.json()).then(cart => {
            const countEls = document.querySelectorAll('.cart-count-bubble span, .cart-count, [data-cart-count]');
            countEls.forEach(el => el.textContent = cart.item_count);
          });
        }

        // Show toast notification instead of cart drawer
        if (typeof window.cfShowCartToast === 'function') {
          window.cfShowCartToast(data, qty);
        }

        setTimeout(() => {
          button.textContent = 'Add to Cart';
          button.style.background = '';
          button.disabled = false;
        }, 2000);
      })
      .catch(err => {
        console.error('Cart error:', err);
        button.textContent = 'Error';
        button.style.background = '#ef4444';
        setTimeout(() => {
          button.textContent = 'Add to Cart';
          button.style.background = '';
          button.disabled = false;
        }, 2000);
      });
    });
  });

  // Sort Handler ‚Äî client-side sort (products are from multiple L3 collections)
  window.handleSort = function(value) {
    const grid = document.getElementById('product-grid');
    if (!grid) return;

    productData.sort((a, b) => {
      switch (value) {
        case 'price-ascending':
          return a.price - b.price;
        case 'price-descending':
          return b.price - a.price;
        case 'title-ascending':
          return a.title.localeCompare(b.title);
        case 'best-selling':
        default:
          return a.originalIndex - b.originalIndex;
      }
    });

    // Re-append cards in sorted order
    for (const item of productData) {
      grid.appendChild(item.element);
    }

    // Re-apply filters + pagination with new order
    applyFilters();
  };

  // Mobile Filter Button
  const mobileFilterBtn = document.getElementById('mobile-filter-btn');
  if (mobileFilterBtn) {
    mobileFilterBtn.addEventListener('click', openMobileFilters);
  }

  // Initialize
  initProductData();
  applyFilters();

  console.log('CF-PLP: Optimized JS loaded, data cached for', productData.length, 'products');
});
</script>

