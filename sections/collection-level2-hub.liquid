                <div class="cf-plp__card" data-category="{{ handle_clean }}" data-vendor="{{ product.vendor | handleize }}" data-type="{{ product.type | handleize }}" data-price="{{ product.price }}" data-title="{{ product.title | escape }}" data-index="{{ products_shown }}" data-options="{{ variant_options_data }}">
                  <span class="wpd-bridge" data-wpd-product-handle="{{ product.handle }}" data-wpd-product-id="{{ product.id }}" data-wpd-variant-id="{{ product.variants.first.id }}" data-wpd-variant-price="{{ product.price }}"></span>
