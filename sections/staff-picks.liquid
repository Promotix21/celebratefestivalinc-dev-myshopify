<!-- Staff Picks Section -->
<section class="staff-picks staff-picks-{{ section.id }}">
  <div class="container">
    {% if section.settings.show_title %}
    <div class="section-title">
      <h2>{{ section.settings.section_title }}</h2>
      <span class="title-accent">{{ section.settings.section_subtitle }}</span>
    </div>
    {% endif %}
    
    <div class="products-slider swiper">
      <div class="swiper-wrapper" id="staffPicksSlider-{{ section.id }}">
        {% comment %} Get products based on settings {% endcomment %}
        {% assign staff_picks_products = blank %}
        
        {% if section.settings.product_source == 'collection' and section.settings.featured_collection != blank %}
          {% assign staff_picks_products = collections[section.settings.featured_collection].products %}
        {% elsif section.settings.product_source == 'tag' and section.settings.product_tag != blank %}
          {% assign staff_picks_products = blog.articles | where: 'tags', section.settings.product_tag %}
          {% assign staff_picks_products = shop.products | where: 'tags', section.settings.product_tag %}
        {% elsif section.settings.product_source == 'manual' %}
          {% assign staff_picks_products = section.settings.featured_products %}
        {% endif %}
        
        {% for product in staff_picks_products limit: section.settings.products_limit %}
          <div class="swiper-slide">
            <div class="product-card" data-id="{{ product.id }}">
              <div class="product-image">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '400x400' }}" 
                       alt="{{ product.featured_image.alt | escape }}" 
                       loading="lazy">
                {% else %}
                  <div style="width: 100%; height: 100%; background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">
                    No Image
                  </div>
                {% endif %}
                
                {% comment %} Calculate discount percentage {% endcomment %}
                {% if product.compare_at_price > product.price %}
                  {% assign discount = product.compare_at_price | minus: product.price %}
                  {% assign discount_percentage = discount | times: 100 | divided_by: product.compare_at_price %}
                  <div class="discount-pill">Save {{ discount_percentage }}%</div>
                {% endif %}
              </div>
              
              <div class="product-info">
                <h3 class="product-title">{{ product.title }}</h3>
                
                {% if section.settings.show_brand and product.vendor != blank %}
                  <p class="product-brand">{{ product.vendor }}</p>
                {% endif %}
                
                {% if section.settings.show_description and product.description != blank %}
                  <p class="product-description">{{ product.description | strip_html | truncate: section.settings.description_length }}</p>
                {% endif %}
                
                <div class="product-pricing">
                  {% if product.compare_at_price > product.price %}
                    <span class="original-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <p class="product-price">{{ product.price | money }}</p>
                </div>
                
                <div class="product-actions">
                  <a href="{{ product.url }}" class="btn btn-primary view-product-btn">
                    {% if section.settings.show_button_icons %}<i class="fas fa-eye"></i>{% endif %}
                    {{ section.settings.view_button_text }}
                  </a>
                  
                  {% if section.settings.show_add_to_cart %}
                    <button class="btn btn-secondary add-to-cart-btn" 
                            data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                            {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
                      {% if section.settings.show_button_icons %}<i class="fas fa-shopping-cart"></i>{% endif %}
                      {% if product.selected_or_first_available_variant.available %}
                        {{ section.settings.cart_button_text }}
                      {% else %}
                        Sold Out
                      {% endif %}
                    </button>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% else %}
          <div class="swiper-slide">
            <div class="product-card">
              <div class="product-info">
                <h3>No products found</h3>
                <p>Please select a collection or add product tags in the theme settings.</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      
      {% if section.settings.show_pagination %}
        <div class="swiper-pagination products-pagination"></div>
      {% endif %}
    </div>
    
    {% if section.settings.show_navigation %}
    <div class="slider-navigation">
      <button class="nav-btn prev-btn" id="productsPrev-{{ section.id }}">
        <i class="fas fa-chevron-left"></i>
      </button>
      <button class="nav-btn next-btn" id="productsNext-{{ section.id }}">
        <i class="fas fa-chevron-right"></i>
      </button>
    </div>
    {% endif %}
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize Swiper for staff picks
  const staffPicksSwiper{{ section.id | replace: '-', '_' }} = new Swiper('.staff-picks-{{ section.id }} .products-slider', {
    slidesPerView: 1,
    spaceBetween: {{ section.settings.slide_spacing }},
    loop: {{ section.settings.enable_loop }},
    autoplay: {{ section.settings.enable_autoplay }} ? {
      delay: {{ section.settings.autoplay_delay }},
      disableOnInteraction: false,
    } : false,
    speed: {{ section.settings.transition_speed }},
    breakpoints: {
      640: {
        slidesPerView: {{ section.settings.slides_mobile }},
      },
      768: {
        slidesPerView: {{ section.settings.slides_tablet }},
      },
      1024: {
        slidesPerView: {{ section.settings.slides_desktop }},
      }
    },
    {% if section.settings.show_pagination %}
    pagination: {
      el: '.staff-picks-{{ section.id }} .products-pagination',
      clickable: true,
      dynamicBullets: true,
    },
    {% endif %}
  });
  
  {% if section.settings.show_navigation %}
  // Navigation buttons
  document.getElementById('productsNext-{{ section.id }}').addEventListener('click', function() {
    staffPicksSwiper{{ section.id | replace: '-', '_' }}.slideNext();
  });
  
  document.getElementById('productsPrev-{{ section.id }}').addEventListener('click', function() {
    staffPicksSwiper{{ section.id | replace: '-', '_' }}.slidePrev();
  });
  {% endif %}
  
  {% if section.settings.show_add_to_cart %}
  // Add to cart functionality
  document.querySelectorAll('.staff-picks-{{ section.id }} .add-to-cart-btn').forEach(function(button) {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      const variantId = this.getAttribute('data-variant-id');
      const originalText = this.innerHTML;
      
      // Show loading
      this.innerHTML = '{% if section.settings.show_button_icons %}<i class="fas fa-spinner fa-spin"></i>{% endif %} Adding...';
      this.disabled = true;
      
      // Add to cart
      fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          id: variantId,
          quantity: 1
        })
      })
      .then(response => response.json())
      .then(data => {
        // Success feedback
        this.innerHTML = '{% if section.settings.show_button_icons %}<i class="fas fa-check"></i>{% endif %} Added!';
        this.classList.add('success');
        
        // Update cart count if cart drawer exists
        if (typeof updateCartCount === 'function') {
          updateCartCount();
        }
        
        // Reset button after 2 seconds
        setTimeout(() => {
          this.innerHTML = originalText;
          this.disabled = false;
          this.classList.remove('success');
        }, 2000);
      })
      .catch(error => {
        console.error('Error:', error);
        this.innerHTML = 'Error - Try Again';
        setTimeout(() => {
          this.innerHTML = originalText;
          this.disabled = false;
        }, 2000);
      });
    });
  });
  {% endif %}
});
</script>

