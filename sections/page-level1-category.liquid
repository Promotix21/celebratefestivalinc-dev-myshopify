{% comment %}
  Page Level 1 Category Section
  Static page template for main categories (Restaurant Equipment, Refrigeration, etc.)
  Based on webstaurant-mockup.html Level 1 layout
  Using Celebrate Festival colors
{% endcomment %}

{%- style -%}
  /* ==================================================
     PAGE LEVEL 1 CATEGORY SECTION
     Celebrate Festival Color Palette:
     - Primary Gold: #d4af37
     - Primary Coral: #ff6b6b
     - Deep Blue: #1a365d
     - Navy: #2d5a87
     ================================================== */

  .page-l1 {
    padding: 0;
    background: #ffffff;
  }

  .page-l1__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Hero Banner */
  .page-l1__hero {
    position: relative;
    height: {{ section.settings.hero_height }}px;
    background-size: cover;
    background-position: center;
    background-color: #1a365d;
    overflow: hidden;
  }

  .page-l1__hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(26, 54, 93, 0.5);
    z-index: 1;
  }

  .page-l1__hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .page-l1__hero-content {
    position: relative;
    z-index: 2;
    padding: 40px 30px;
    color: white;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .page-l1__hero-title {
    font-size: 36px;
    font-weight: 700;
    margin: 0 0 12px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    color: #ffffff;
  }

  .page-l1__hero-subtitle {
    font-size: 16px;
    opacity: 0.95;
    max-width: 600px;
    margin: 0;
    line-height: 1.5;
  }

  .page-l1__hero-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a365d 0%, #2d5a87 100%);
  }

  .page-l1__hero-placeholder svg {
    color: rgba(255,255,255,0.2);
  }

  @media (max-width: 768px) {
    .page-l1__hero {
      height: 220px;
    }
    .page-l1__hero-title {
      font-size: 28px;
    }
    .page-l1__hero-subtitle {
      font-size: 14px;
    }
    .page-l1__hero-content {
      padding: 25px 20px;
    }
  }

  /* Section Title */
  .page-l1__section-title {
    font-size: 22px;
    font-weight: 700;
    color: #1a365d;
    margin: 0 0 20px;
    padding-bottom: 12px;
    border-bottom: 2px solid #d4af37;
  }

  /* Main Categories Grid - 4 Columns */
  .page-l1__categories {
    padding: 30px 20px 40px;
    background: #ffffff;
  }

  .page-l1__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  @media (max-width: 1024px) {
    .page-l1__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .page-l1__grid {
      grid-template-columns: 1fr;
    }
  }

  /* Category Card */
  .page-l1__card {
    background: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    transition: box-shadow 0.3s ease, transform 0.2s ease;
  }

  .page-l1__card:hover {
    box-shadow: 0 8px 24px rgba(26, 54, 93, 0.12);
    transform: translateY(-2px);
  }

  .page-l1__card-image {
    width: 100%;
    height: 160px;
    position: relative;
    background: #f5f5f5;
    overflow: hidden;
  }

  .page-l1__card-image a {
    display: block;
    height: 100%;
  }

  .page-l1__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .page-l1__card:hover .page-l1__card-image img {
    transform: scale(1.05);
  }

  .page-l1__card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%);
    color: #999;
  }

  .page-l1__card-content {
    padding: 16px 18px 20px;
  }

  .page-l1__card-title {
    font-size: 16px;
    font-weight: 700;
    color: #1a365d;
    margin: 0 0 6px;
    line-height: 1.3;
  }

  .page-l1__card-title a {
    color: inherit;
    text-decoration: none;
  }

  .page-l1__card-title a:hover {
    color: #d4af37;
  }

  .page-l1__card-count {
    font-size: 13px;
    color: #2d5a87;
    font-weight: 600;
    margin-bottom: 10px;
    display: inline-block;
  }

  .page-l1__card-count a {
    color: inherit;
    text-decoration: none;
  }

  .page-l1__card-count a:hover {
    text-decoration: underline;
    color: #d4af37;
  }

  .page-l1__card-desc {
    font-size: 13px;
    color: #555;
    line-height: 1.55;
    margin-bottom: 14px;
  }

  .page-l1__card-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .page-l1__card-links li {
    margin-bottom: 5px;
  }

  .page-l1__card-links a {
    font-size: 13px;
    color: #2d5a87;
    text-decoration: none;
    display: inline-block;
    padding: 1px 0;
  }

  .page-l1__card-links a:hover {
    text-decoration: underline;
    color: #d4af37;
  }

  /* Icon Categories Row */
  .page-l1__icons {
    padding: 25px 20px 30px;
    background: #ffffff;
    border-top: 1px solid #e0e0e0;
  }

  .page-l1__icons-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    gap: 20px;
  }

  .page-l1__icon-item {
    text-align: center;
    width: 110px;
    flex-shrink: 0;
    text-decoration: none;
  }

  .page-l1__icon-image {
    width: 90px;
    height: 90px;
    border-radius: 8px;
    object-fit: cover;
    margin: 0 auto 10px;
    display: block;
    background: #f8f8f8;
    border: 1px solid #e0e0e0;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .page-l1__icon-item:hover .page-l1__icon-image {
    border-color: #d4af37;
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.2);
  }

  .page-l1__icon-placeholder {
    width: 90px;
    height: 90px;
    border-radius: 8px;
    margin: 0 auto 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f0f0f0 0%, #e8e8e8 100%);
    border: 1px solid #e0e0e0;
    color: #aaa;
  }

  .page-l1__icon-label {
    font-size: 12px;
    color: #2d5a87;
    line-height: 1.35;
    display: block;
  }

  .page-l1__icon-item:hover .page-l1__icon-label {
    color: #d4af37;
  }

  @media (max-width: 768px) {
    .page-l1__icons-grid {
      justify-content: center;
    }
  }

  /* Brands Section */
  .page-l1__brands {
    padding: 25px 20px 30px;
    background: #fafafa;
    border-top: 1px solid #e0e0e0;
  }

  .page-l1__brands-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 30px;
  }

  .page-l1__brand-item {
    text-align: center;
    padding: 15px 20px;
    text-decoration: none;
    transition: transform 0.2s ease;
  }

  .page-l1__brand-item:hover {
    transform: scale(1.05);
  }

  .page-l1__brand-logo {
    max-height: 50px;
    max-width: 140px;
    object-fit: contain;
    opacity: 0.85;
    transition: opacity 0.2s ease;
  }

  .page-l1__brand-item:hover .page-l1__brand-logo {
    opacity: 1;
  }

  .page-l1__brand-placeholder {
    font-weight: 700;
    font-size: 16px;
    color: #1a365d;
  }

  .page-l1__brand-subtitle {
    font-size: 10px;
    color: #888;
    margin-top: 4px;
  }

  /* Empty State */
  .page-l1__empty {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    background: #f9f9f9;
    border-radius: 8px;
    margin: 20px;
  }

  .page-l1__empty p {
    margin: 0 0 10px;
  }

  /* View All Button */
  .page-l1__view-all-btn {
    display: inline-block;
    padding: 12px 28px;
    background: #d4af37;
    color: #ffffff;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    border-radius: 4px;
    transition: background-color 0.2s ease, transform 0.2s ease;
    margin-top: 10px;
  }

  .page-l1__view-all-btn:hover {
    background: #c4a030;
    transform: translateY(-1px);
  }
{%- endstyle -%}

<section class="page-l1">
  <div class="page-l1__container">

    {%- comment -%} Hero Banner {%- endcomment -%}
    <div class="page-l1__hero" {% if section.settings.hero_image %}style="background-image: url('{{ section.settings.hero_image | image_url: width: 1600 }}');"{% endif %}>
      {% if section.settings.hero_image %}
        <div class="page-l1__hero-overlay"></div>
      {% else %}
        <div class="page-l1__hero-placeholder">
          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <path d="M21 15l-5-5L5 21"/>
          </svg>
        </div>
      {% endif %}
      <div class="page-l1__hero-content">
        {% if section.settings.hero_title != blank %}
          <h1 class="page-l1__hero-title">{{ section.settings.hero_title }}</h1>
        {% elsif page.title != blank %}
          <h1 class="page-l1__hero-title">{{ page.title }}</h1>
        {% endif %}
        {% if section.settings.hero_subtitle != blank %}
          <p class="page-l1__hero-subtitle">{{ section.settings.hero_subtitle }}</p>
        {% endif %}
      </div>
    </div>

    {%- comment -%} Category Cards Grid {%- endcomment -%}
    {% assign category_blocks = section.blocks | where: "type", "category_card" %}
    {% if category_blocks.size > 0 %}
      <div class="page-l1__categories">
        {% if section.settings.categories_title != blank %}
          <h2 class="page-l1__section-title">{{ section.settings.categories_title }}</h2>
        {% endif %}
        <div class="page-l1__grid">
          {% for block in category_blocks %}
            <div class="page-l1__card" {{ block.shopify_attributes }}>
              <div class="page-l1__card-image">
                {% if block.settings.card_link != blank %}
                  <a href="{{ block.settings.card_link }}">
                {% endif %}
                  {% if block.settings.card_image %}
                    <img
                      src="{{ block.settings.card_image | image_url: width: 500 }}"
                      alt="{{ block.settings.card_title | escape }}"
                      loading="lazy"
                      width="500"
                      height="320"
                    >
                  {% else %}
                    <div class="page-l1__card-placeholder">
                      <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <rect x="3" y="3" width="18" height="18" rx="2"/>
                        <circle cx="8.5" cy="8.5" r="1.5"/>
                        <path d="M21 15l-5-5L5 21"/>
                      </svg>
                    </div>
                  {% endif %}
                {% if block.settings.card_link != blank %}
                  </a>
                {% endif %}
              </div>
              <div class="page-l1__card-content">
                <h3 class="page-l1__card-title">
                  {% if block.settings.card_link != blank %}
                    <a href="{{ block.settings.card_link }}">{{ block.settings.card_title }}</a>
                  {% else %}
                    {{ block.settings.card_title }}
                  {% endif %}
                </h3>
                {% if block.settings.card_count_text != blank %}
                  <div class="page-l1__card-count">
                    {% if block.settings.card_link != blank %}
                      <a href="{{ block.settings.card_link }}">{{ block.settings.card_count_text }}</a>
                    {% else %}
                      {{ block.settings.card_count_text }}
                    {% endif %}
                  </div>
                {% endif %}
                {% if block.settings.card_description != blank %}
                  <p class="page-l1__card-desc">{{ block.settings.card_description }}</p>
                {% endif %}
                {% if block.settings.subcategory_1 != blank or block.settings.subcategory_2 != blank or block.settings.subcategory_3 != blank or block.settings.subcategory_4 != blank %}
                  <ul class="page-l1__card-links">
                    {% if block.settings.subcategory_1 != blank %}
                      <li><a href="{{ block.settings.subcategory_1_link }}">{{ block.settings.subcategory_1 }}</a></li>
                    {% endif %}
                    {% if block.settings.subcategory_2 != blank %}
                      <li><a href="{{ block.settings.subcategory_2_link }}">{{ block.settings.subcategory_2 }}</a></li>
                    {% endif %}
                    {% if block.settings.subcategory_3 != blank %}
                      <li><a href="{{ block.settings.subcategory_3_link }}">{{ block.settings.subcategory_3 }}</a></li>
                    {% endif %}
                    {% if block.settings.subcategory_4 != blank %}
                      <li><a href="{{ block.settings.subcategory_4_link }}">{{ block.settings.subcategory_4 }}</a></li>
                    {% endif %}
                  </ul>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="page-l1__empty">
        <p>No categories configured yet.</p>
        <p><small>Add category card blocks in the theme editor to display categories.</small></p>
      </div>
    {% endif %}

    {%- comment -%} Icon Row {%- endcomment -%}
    {% assign icon_blocks = section.blocks | where: "type", "icon_item" %}
    {% if icon_blocks.size > 0 %}
      <div class="page-l1__icons">
        {% if section.settings.icons_title != blank %}
          <h2 class="page-l1__section-title">{{ section.settings.icons_title }}</h2>
        {% endif %}
        <div class="page-l1__icons-grid">
          {% for block in icon_blocks %}
            <a href="{{ block.settings.icon_link | default: '#' }}" class="page-l1__icon-item" {{ block.shopify_attributes }}>
              {% if block.settings.icon_image %}
                <img
                  src="{{ block.settings.icon_image | image_url: width: 180 }}"
                  alt="{{ block.settings.icon_label | escape }}"
                  class="page-l1__icon-image"
                  loading="lazy"
                  width="90"
                  height="90"
                >
              {% else %}
                <div class="page-l1__icon-placeholder">
                  <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="3" width="18" height="18" rx="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <path d="M21 15l-5-5L5 21"/>
                  </svg>
                </div>
              {% endif %}
              <span class="page-l1__icon-label">{{ block.settings.icon_label }}</span>
            </a>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {%- comment -%} Brands Section {%- endcomment -%}
    {% assign brand_blocks = section.blocks | where: "type", "brand_logo" %}
    {% if brand_blocks.size > 0 %}
      <div class="page-l1__brands">
        {% if section.settings.brands_title != blank %}
          <h2 class="page-l1__section-title">{{ section.settings.brands_title }}</h2>
        {% endif %}
        <div class="page-l1__brands-grid">
          {% for block in brand_blocks %}
            <a href="{{ block.settings.brand_link | default: '#' }}" class="page-l1__brand-item" {{ block.shopify_attributes }}>
              {% if block.settings.brand_image %}
                <img
                  src="{{ block.settings.brand_image | image_url: width: 280 }}"
                  alt="{{ block.settings.brand_name | escape }}"
                  class="page-l1__brand-logo"
                  loading="lazy"
                >
              {% else %}
                <div class="page-l1__brand-placeholder">{{ block.settings.brand_name }}</div>
                {% if block.settings.brand_subtitle != blank %}
                  <div class="page-l1__brand-subtitle">{{ block.settings.brand_subtitle }}</div>
                {% endif %}
              {% endif %}
            </a>
          {% endfor %}
        </div>
      </div>
    {% endif %}

  </div>
</section>

