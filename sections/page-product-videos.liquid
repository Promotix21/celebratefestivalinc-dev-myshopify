{
  "name": "Product Videos Page",
  "tag": "section",
  "class": "section-product-videos-page",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "text",
      "id": "hero_tagline",
      "label": "Hero Tagline",
      "default": "Video Library"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Product Videos"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Watch product demonstrations, tutorials, and equipment reviews."
    },
    {
      "type": "header",
      "content": "Filters"
