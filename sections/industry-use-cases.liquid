<!-- sections/industry-use-cases.liquid -->
<style>
  .industry-use-cases {
    padding: 60px 0;
    background-color: #f8f9fa;
  }
  
  .industry-use-cases__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .industry-use-cases__header {
    text-align: center;
    margin-bottom: 50px;
  }
  
  .industry-use-cases__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary-color, #244469);
    margin-bottom: 10px;
    line-height: 1.2;
  }
  
  .industry-use-cases__subtitle {
    font-size: 1.1rem;
    color: var(--accent-color, #f14f56);
    font-weight: 500;
  }
  
  .industry-use-cases__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 60px;
  }
  
  .use-case-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .use-case-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
  }
  
  .use-case-card__image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }
  
  .use-case-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .use-case-card__icon {
    position: absolute;
    top: 15px;
    left: 15px;
    width: 40px;
    height: 40px;
    background: var(--accent-color, #f14f56);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 20px;
  }
  
  .use-case-card__content {
    padding: 25px;
  }
  
  .use-case-card__title {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--primary-color, #244469);
    margin-bottom: 8px;
  }
  
  .use-case-card__description {
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 20px;
    line-height: 1.5;
  }
  
  .use-case-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 25px;
  }
  
  .use-case-card__tag {
    display: inline-block;
    padding: 6px 14px;
    background: #f1f5f9;
    color: var(--primary-color, #244469);
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }
  
  .use-case-card__tag:hover {
    background: var(--primary-color, #244469);
    color: white;
    transform: translateY(-1px);
  }
  
  .use-case-card__cta {
    display: inline-flex;
    align-items: center;
    color: var(--accent-color, #f14f56);
    font-weight: 600;
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }
  
  .use-case-card__cta:hover {
    color: var(--primary-color, #244469);
    transform: translateX(3px);
  }
  
  .use-case-card__cta svg {
    margin-left: 8px;
    width: 16px;
    height: 16px;
  }
  
  .industry-use-cases__cta {
    background: var(--primary-color, #244469);
    border-radius: 12px;
    padding: 50px 30px;
    text-align: center;
    color: white;
  }
  
  .industry-use-cases__cta-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 15px;
    color: white;
  }
  
  .industry-use-cases__cta-subtitle {
    font-size: 1.1rem;
    margin-bottom: 30px;
    opacity: 0.9;
    line-height: 1.5;
  }
  
  .industry-use-cases__cta-button {
    display: inline-flex;
    align-items: center;
    background: var(--accent-color, #f14f56);
    color: white;
    padding: 15px 30px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }
  
  .industry-use-cases__cta-button:hover {
    background: #e63946;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(241, 79, 86, 0.4);
  }
  
  .industry-use-cases__cta-button svg {
    margin-right: 8px;
    width: 18px;
    height: 18px;
  }
  
  /* Tablet Styles - 2x3 grid */
  @media (max-width: 1024px) {
    .industry-use-cases__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }
    
    .industry-use-cases__title {
      font-size: 2.2rem;
    }
    
    .industry-use-cases__cta-title {
      font-size: 1.8rem;
    }
  }
  
  /* Mobile Styles - 1x6 grid */
  @media (max-width: 768px) {
    .industry-use-cases {
      padding: 40px 0;
    }
    
    .industry-use-cases__container {
      padding: 0 15px;
    }
    
    .industry-use-cases__grid {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 40px;
    }
    
    .industry-use-cases__title {
      font-size: 1.8rem;
    }
    
    .industry-use-cases__subtitle {
      font-size: 1rem;
    }
    
    .use-case-card__content {
      padding: 20px;
    }
    
    .use-case-card__title {
      font-size: 1.2rem;
    }
    
    .use-case-card__description {
      font-size: 0.9rem;
    }
    
    .industry-use-cases__cta {
      padding: 40px 20px;
    }
    
    .industry-use-cases__cta-title {
      font-size: 1.6rem;
    }
    
    .industry-use-cases__cta-subtitle {
      font-size: 1rem;
    }
  }
  
  /* CSS Custom Properties for Schema Colors */
  .industry-use-cases {
    --primary-color: {{ section.settings.primary_color }};
    --accent-color: {{ section.settings.accent_color }};
  }
</style>

<div class="industry-use-cases">
  <div class="industry-use-cases__container">
    <!-- Header -->
    <div class="industry-use-cases__header">
      <h2 class="industry-use-cases__title">{{ section.settings.title }}</h2>
      <p class="industry-use-cases__subtitle">{{ section.settings.subtitle }}</p>
    </div>
    
    <!-- Use Cases Grid -->
    <div class="industry-use-cases__grid">
      {% for block in section.blocks %}
        {% if block.type == 'use_case' %}
          <div class="use-case-card" {{ block.shopify_attributes }}>
            <div class="use-case-card__image">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url: width: 400 }}" 
                     alt="{{ block.settings.title }}"
                     loading="lazy">
              {% else %}
                <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
                  Add Image
                </div>
              {% endif %}
              
              {% if block.settings.icon %}
                <div class="use-case-card__icon">
                  {{ block.settings.icon }}
                </div>
              {% endif %}
            </div>
            
            <div class="use-case-card__content">
              <h3 class="use-case-card__title">{{ block.settings.title }}</h3>
              <p class="use-case-card__description">{{ block.settings.description }}</p>
              
              {% if block.settings.tags != blank %}
                <div class="use-case-card__tags">
                  {% assign tags_array = block.settings.tags | split: ',' %}
                  {% for tag_item in tags_array %}
                    {% assign tag_parts = tag_item | split: '|' %}
                    {% assign tag_name = tag_parts[0] | strip %}
                    {% assign tag_value = tag_parts[1] | strip %}
                    {% if tag_value == blank %}
                      {% assign tag_value = tag_name | handleize %}
                    {% endif %}
                    
                    <a href="{{ block.settings.collection_handle | default: 'all' | prepend: '/collections/' }}/{{ tag_value | handleize }}" 
                       class="use-case-card__tag">
                      {{ tag_name }}
                    </a>
                  {% endfor %}
                </div>
              {% endif %}
              
              {% if block.settings.cta_text != blank and block.settings.cta_url != blank %}
                <a href="{{ block.settings.cta_url }}" class="use-case-card__cta">
                  {{ block.settings.cta_text }}
                  <svg fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"></path>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Bottom CTA Section -->
    {% if section.settings.show_bottom_cta %}
      <div class="industry-use-cases__cta">
        <h3 class="industry-use-cases__cta-title">{{ section.settings.cta_title }}</h3>
        <p class="industry-use-cases__cta-subtitle">{{ section.settings.cta_subtitle }}</p>
        
        {% if section.settings.cta_button_text != blank and section.settings.cta_button_url != blank %}
          <a href="{{ section.settings.cta_button_url }}" class="industry-use-cases__cta-button">
            <svg fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2 3.5A1.5 1.5 0 013.5 2h1.148a1.5 1.5 0 011.465 1.175l.716 3.223a1.5 1.5 0 01-1.052 1.767l-.933.267c-.41.117-.643.555-.48.95a11.542 11.542 0 006.254 6.254c.395.163.833-.07.95-.48l.267-.933a1.5 1.5 0 011.767-1.052l3.223.716A1.5 1.5 0 0118 15.352V16.5a1.5 1.5 0 01-1.5 1.5H15c-1.149 0-2.263-.15-3.326-.43A13.022 13.022 0 012.43 8.326 13.019 13.019 0 012 5V3.5z" clip-rule="evenodd"></path>
            </svg>
            {{ section.settings.cta_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

