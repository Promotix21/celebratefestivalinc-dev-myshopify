<!-- Hero Banner Slider Section -->
<section class="hero-banner" id="heroBanner" 
  style="
    background-color: {{ section.settings.fallback_color }};
    min-height: 70vh;
    position: relative;
  "
>
  <!-- Slider Container -->
  <div class="hero-slider swiper" 
    data-autoplay="{{ section.settings.autoplay }}"
    data-autoplay-delay="{{ section.settings.autoplay_delay }}"
    data-loop="{{ section.settings.loop }}"
    data-speed="{{ section.settings.transition_speed }}"
    data-effect="{{ section.settings.transition_effect }}"
  >
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide hero-slide {%- if block.settings.enable_ken_burns -%} ken-burns{%- endif -%}" {{ block.shopify_attributes }}
          style="
            background-image: 
              linear-gradient(
                90deg,
                rgba(40, 72, 112, {{ block.settings.overlay_opacity_1 | default: 0.95 }}) 0%,
                rgba(40, 72, 112, {{ block.settings.overlay_opacity_2 | default: 0.7 }}) 40%,
                transparent {{ block.settings.overlay_fade_point | default: 70 }}%
              ),
              url('{{ block.settings.background_image | img_url: '1920x1080' }}');
            background-size: {{ block.settings.bg_size }};
            background-position: {{ block.settings.bg_position }};
            background-repeat: no-repeat;
            background-attachment: {{ block.settings.bg_attachment }};
            min-height: 70vh;
            display: flex;
            animation-duration: {{ block.settings.ken_burns_duration | default: 20 }}s;
          "
        >
          <div class="container" style="width: 100%; display: flex;">
            <!-- Left Column - Content -->
            <div class="hero-content-column" 
              style="
                flex: 0 0 {{ section.settings.content_column_width | default: 50 }}%;
                max-width: {{ section.settings.content_column_width | default: 50 }}%;
                display: flex;
                align-items: center;
                padding: {{ section.settings.content_column_padding | default: 40 }}px;
              "
            >
              <div class="hero-content"
                style="
                  text-align: left;
                  max-width: 100%;
                  padding-left: {{ section.settings.content_left_padding | default: 50 }}px;
                  background-color: {{ block.settings.content_bg_color | color_modify: 'alpha', block.settings.content_bg_opacity }};
                  border-radius: {{ block.settings.content_border_radius }}px;
                  backdrop-filter: {{ block.settings.content_backdrop_filter }};
                  animation-delay: {{ block.settings.animation_delay }}ms;
                  {%- if block.settings.content_bg_opacity > 0 -%}
                    padding: {{ block.settings.content_inner_padding | default: 20 }}px {{ block.settings.content_inner_padding | default: 20 }}px {{ block.settings.content_inner_padding | default: 20 }}px {{ section.settings.content_left_padding | default: 50 }}px;
                  {%- endif -%}
                "
                data-swiper-parallax="{{ block.settings.parallax_offset }}"
              >
                {%- if block.settings.show_badge and block.settings.badge_text != blank -%}
                  <div class="hero-badge"
                    style="
                      background: {{ block.settings.badge_bg_color }};
                      color: {{ block.settings.badge_text_color }};
                      font-size: {{ block.settings.badge_font_size }}px;
                      font-weight: {{ block.settings.badge_font_weight }};
                      padding: {{ block.settings.badge_padding }}px;
                      border-radius: {{ block.settings.badge_border_radius }}px;
                      margin-bottom: {{ block.settings.badge_margin }}px;
                      display: inline-flex;
                      align-items: center;
                      gap: 8px;
                    "
                    data-swiper-parallax="-400"
                  >
                    {%- if block.settings.badge_icon != blank -%}
                      <i class="{{ block.settings.badge_icon }}"></i>
                    {%- endif -%}
                    <span>{{ block.settings.badge_text }}</span>
                  </div>
                {%- endif -%}

                {%- if block.settings.heading != blank -%}
                  <h1 class="hero-heading"
                    style="
                      font-family: {{ block.settings.heading_font }};
                      font-size: {{ block.settings.heading_size }}px;
                      font-weight: {{ block.settings.heading_weight }};
                      color: {{ block.settings.heading_color }};
                      line-height: {{ block.settings.heading_line_height }};
                      letter-spacing: {{ block.settings.heading_letter_spacing }}px;
                      margin-bottom: {{ block.settings.heading_margin }}px;
                      text-shadow: {{ block.settings.heading_text_shadow }};
                      text-transform: {{ block.settings.heading_text_transform }};
                      margin-top: 0;
                    "
                    data-swiper-parallax="-300"
                  >
                    {{ block.settings.heading }}
                  </h1>
                {%- endif -%}

                {%- if block.settings.subheading != blank -%}
                  <p class="hero-subheading"
                    style="
                      font-family: {{ block.settings.subheading_font }};
                      font-size: {{ block.settings.subheading_size }}px;
                      font-weight: {{ block.settings.subheading_weight }};
                      color: {{ block.settings.subheading_color }};
                      line-height: {{ block.settings.subheading_line_height }};
                      letter-spacing: {{ block.settings.subheading_letter_spacing }}px;
                      margin-bottom: {{ block.settings.subheading_margin }}px;
                      text-shadow: {{ block.settings.subheading_text_shadow }};
                      max-width: {{ block.settings.subheading_max_width }}px;
                    "
                    data-swiper-parallax="-200"
                  >
                    {{ block.settings.subheading }}
                  </p>
                {%- endif -%}

                {%- if block.settings.show_button and block.settings.button_text != blank -%}
                  <div class="hero-actions"
                    style="
                      margin-top: {{ block.settings.button_margin_top }}px;
                      display: flex;
                      align-items: center;
                    "
                    data-swiper-parallax="-100"
                  >
                    <a href="{{ block.settings.button_link | default: '#' }}" 
                       class="hero-cta primary-btn"
                       style="
                         background: {{ block.settings.btn_bg_color }};
                         color: {{ block.settings.btn_text_color }};
                         font-size: {{ block.settings.btn_font_size }}px;
                         font-weight: {{ block.settings.btn_font_weight }};
                         padding: {{ block.settings.btn_vertical_padding | default: 12 }}px {{ block.settings.btn_horizontal_padding | default: 24 }}px;
                         border-radius: {{ block.settings.btn_border_radius }}px;
                         text-decoration: none;
                         display: inline-flex;
                         align-items: center;
                         gap: 8px;
                         transition: all 0.3s ease;
                         border: {{ block.settings.btn_border_width }}px solid {{ block.settings.btn_border_color }};
                         box-shadow: {{ block.settings.btn_shadow }};
                         min-width: {{ block.settings.btn_min_width }}px;
                         justify-content: center;
                       "
                       data-hover-bg="{{ block.settings.btn_hover_bg }}"
                       data-hover-color="{{ block.settings.btn_hover_color }}"
                    >
                      {%- if block.settings.btn_icon != blank -%}
                        <i class="{{ block.settings.btn_icon }}"></i>
                      {%- endif -%}
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>

            <!-- Right Column - Empty for background visibility -->
            <div class="hero-empty-column" 
              style="
                flex: 0 0 {{ 100 | minus: section.settings.content_column_width | default: 50 }}%;
                max-width: {{ 100 | minus: section.settings.content_column_width | default: 50 }}%;
              "
            ></div>
          </div>
        </div>
      {%- endfor -%}
    </div>

    <!-- Navigation Elements -->
    {%- if section.settings.show_pagination -%}
      <div class="swiper-pagination hero-pagination"
        style="
          bottom: {{ section.settings.pagination_bottom }}px;
          --swiper-pagination-color: {{ section.settings.pagination_active_color }};
          --swiper-pagination-bullet-inactive-color: {{ section.settings.pagination_inactive_color }};
          --swiper-pagination-bullet-size: {{ section.settings.pagination_bullet_size }}px;
          --swiper-pagination-bullet-horizontal-gap: {{ section.settings.pagination_bullet_gap }}px;
        "
      ></div>
    {%- endif -%}

    {%- if section.settings.show_arrows -%}
      <div class="swiper-button-next hero-next"
        style="
          color: {{ section.settings.arrow_color }};
          right: {{ section.settings.arrow_offset }}px;
          --swiper-navigation-size: {{ section.settings.arrow_size }}px;
          background: {{ section.settings.arrow_bg_color | color_modify: 'alpha', section.settings.arrow_bg_opacity }};
          border-radius: {{ section.settings.arrow_border_radius }}px;
          width: {{ section.settings.arrow_width }}px;
          height: {{ section.settings.arrow_height }}px;
        "
      ></div>
      <div class="swiper-button-prev hero-prev"
        style="
          color: {{ section.settings.arrow_color }};
          left: {{ section.settings.arrow_offset }}px;
          --swiper-navigation-size: {{ section.settings.arrow_size }}px;
          background: {{ section.settings.arrow_bg_color | color_modify: 'alpha', section.settings.arrow_bg_opacity }};
          border-radius: {{ section.settings.arrow_border_radius }}px;
          width: {{ section.settings.arrow_width }}px;
          height: {{ section.settings.arrow_height }}px;
        "
      ></div>
    {%- endif -%}
  </div>
</section>

<style>
/* Hero Banner Base Styles */
.hero-banner {
  position: relative;
  overflow: hidden;
}

.hero-slider {
  width: 100%;
  height: 100%;
}

.hero-slide {
  width: 100%;
  position: relative;
}

.hero-content {
  position: relative;
  z-index: 2;
  display: block !important;
}

/* Fix content spacing - remove any justify-content that spreads elements */
.hero-badge,
.hero-heading,
.hero-subheading,
.hero-actions {
  display: block;
  width: auto;
}

.hero-badge {
  margin-bottom: 15px !important; /* Fix badge gap */
}

/* Remove any inherited flex properties that might cause spacing issues */
.hero-content * {
  flex: none !important;
  justify-self: auto !important;
  align-self: auto !important;
}

/* Marquee Animation */
.marquee-bar {
  overflow: hidden;
  white-space: nowrap;
  position: relative;
}

.marquee-content {
  display: inline-block;
  animation: marquee 60s linear infinite;
}

@keyframes marquee {
  0% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

/* Ken Burns Effect */
.ken-burns {
  animation-name: kenBurns;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

@keyframes kenBurns {
  0% { transform: scale(1); }
  100% { transform: scale({{ section.settings.ken_burns_scale | default: 1.1 }}); }
}

.hero-slider:hover .ken-burns {
  animation-play-state: paused;
}

/* Button Shine/Glow Effect */
.hero-cta {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.hero-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: left 0.5s ease;
}

.hero-cta:hover::before {
  left: 100%;
}

.hero-cta:hover {
  background: var(--hover-bg) !important;
  color: var(--hover-color) !important;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(40, 72, 112, 0.3) !important;
}

/* Primary button specific shine */
.primary-btn:hover {
  box-shadow: 0 8px 25px rgba(255, 107, 107, 0.4) !important;
}

/* Swiper Navigation Customization */
.swiper-button-next, 
.swiper-button-prev {
  margin-top: 0;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.swiper-button-next:hover, 
.swiper-button-prev:hover {
  opacity: 0.8;
  transform: translateY(-50%) scale(1.1);
}

.swiper-pagination-bullet {
  transition: all 0.3s ease;
}

.swiper-pagination-bullet-active {
  transform: scale(1.2);
}

/* Tablet Responsive Design */
@media screen and (max-width: 1024px) and (min-width: 769px) {
  .hero-banner {
    min-height: 65vh;
  }
  
  .hero-slide {
    min-height: 65vh !important;
  }
  
  .hero-content-column {
    padding: 30px 15px !important;
  }
  
  .hero-content {
    padding-left: 30px !important;
  }
  
  .hero-heading {
    font-size: calc({{ section.settings.tablet_heading_size | default: 36 }}px) !important;
  }
  
  .hero-subheading {
    font-size: calc({{ section.settings.tablet_subheading_size | default: 18 }}px) !important;
  }
  
  .hero-cta {
    padding: 10px 20px !important;
    font-size: 15px !important;
    min-width: 140px !important;
  }
}

/* Mobile Responsive Design */
@media screen and (max-width: 768px) {
  .hero-banner {
    min-height: 60vh;
  }
  
  .hero-slide {
    min-height: 60vh !important;
  }
  
  .container {
  flex-direction: column !important;
  justify-content: center !important;
  align-items: center !important;
  min-height: 80vh !important;
}
  
.hero-content-column {
  flex: none !important;
  max-width: 100% !important;
  padding: 20px 15px !important;
  text-align: left !important;
  display: flex !important;
  justify-content: flex-start !important;
  align-items: stretch !important;
  min-height: 60vh !important;
}
  
.hero-content {
  text-align: left !important;
  max-width: 100% !important;
  padding-left: 0 !important;
  display: flex !important;
  flex-direction: column !important;
  justify-content: space-evenly !important;
  align-items: flex-start !important;
  height: 100% !important;
  min-height: 50vh !important;
}


.hero-badge,
.hero-heading,
.hero-subheading,
.hero-actions {
  flex-shrink: 0 !important;
  margin: auto 0 !important;
}
  
  .hero-empty-column {
    display: none;
  }
  
  .hero-badge {
    font-size: 11px !important;
    padding: 6px !important;
    margin-bottom: 12px !important;
  }
  
  .hero-heading {
    font-size: calc({{ section.settings.mobile_heading_size | default: 35 }}px) !important;
    margin-top: 0 !important;
    margin-bottom: 12px !important;
  }
  
  .hero-subheading {
    font-size: calc({{ section.settings.mobile_subheading_size | default: 20 }}px) !important;
    margin-bottom: 20px !important;
  }
  
.hero-actions {
  justify-content: flex-start !important;
  align-self: flex-start !important;
}
  
  .hero-cta {
    padding: 10px 18px !important; /* Reduced mobile padding */
    font-size: 14px !important; /* Smaller mobile font */
    min-width: 140px !important; /* Smaller mobile width */
    min-height: 44px !important; /* Touch-friendly height */
    width: auto !important;
    max-width: none !important;
  }
  
  .swiper-button-next, 
  .swiper-button-prev {
    display: {{ section.settings.hide_arrows_mobile | default: false }} ? 'none' : 'flex' !important;
    width: 40px !important;
    height: 40px !important;
  }
  
  .swiper-pagination {
    bottom: 15px !important;
  }
}

/* Small Mobile */
@media screen and (max-width: 480px) {
  .hero-banner {
    min-height: 55vh;
  }
  
  .hero-slide {
    min-height: 55vh !important;
  }
  
  .hero-content-column {
    padding: 15px 10px !important;
  }
  
  .hero-heading {
    font-size: calc({{ section.settings.mobile_heading_size | default: 24 }}px) !important;
  }
  
  .hero-subheading {
    font-size: calc({{ section.settings.mobile_subheading_size | default: 14 }}px) !important;
  }
  
  .hero-cta {
    padding: 8px 16px !important;
    font-size: 13px !important;
    min-width: 120px !important;
  }
  
  .marquee-content {
    animation-duration: 30s;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const heroSlider = document.querySelector('.hero-slider');
  if (!heroSlider) return;

  // Initialize Swiper
  const swiper = new Swiper('.hero-slider', {
    loop: heroSlider.dataset.loop === 'true',
    autoplay: heroSlider.dataset.autoplay === 'true' ? {
      delay: parseInt(heroSlider.dataset.autoplayDelay) || 5000,
      disableOnInteraction: false,
    } : false,
    speed: parseInt(heroSlider.dataset.speed) || 1000,
    effect: heroSlider.dataset.effect || 'slide',
    grabCursor: true,
    parallax: true,
    pagination: {
      el: '.hero-pagination',
      clickable: true,
      dynamicBullets: {{ section.settings.dynamic_bullets | default: false }},
    },
    navigation: {
      nextEl: '.hero-next',
      prevEl: '.hero-prev',
    },
    on: {
      slideChangeTransitionStart: function() {
        document.querySelectorAll('.hero-content').forEach(content => {
          content.style.opacity = '0.7';
          content.style.transform = 'translateY(20px)';
        });
      },
      slideChangeTransitionEnd: function() {
        const activeSlide = document.querySelector('.swiper-slide-active .hero-content');
        if (activeSlide) {
          activeSlide.style.opacity = '1';
          activeSlide.style.transform = 'translateY(0)';
        }
      }
    }
  });

  // Button hover effects
  document.querySelectorAll('.hero-cta').forEach(btn => {
    const hoverBg = btn.dataset.hoverBg;
    const hoverColor = btn.dataset.hoverColor;
    
    if (hoverBg) {
      btn.style.setProperty('--hover-bg', hoverBg);
    }
    if (hoverColor) {
      btn.style.setProperty('--hover-color', hoverColor);
    }
  });

  // Pause autoplay on hover
  heroSlider.addEventListener('mouseenter', () => {
    if (swiper.autoplay) swiper.autoplay.stop();
  });

  heroSlider.addEventListener('mouseleave', () => {
    if (swiper.autoplay) swiper.autoplay.start();
  });
});
</script>

