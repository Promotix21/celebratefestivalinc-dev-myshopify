    text-align: center;
  }
  
  .restaurant-partner-{{ section.id }} .stat-number {
    font-size: {{ section.settings.stat_number_font_size }}px;
    font-weight: {{ section.settings.stat_number_font_weight }};
    color: {{ section.settings.stat_number_color }};
    display: block;
    line-height: 1.2;
    margin-bottom: {{ section.settings.stat_number_margin_bottom }}px;
