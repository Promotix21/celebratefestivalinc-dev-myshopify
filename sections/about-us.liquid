    background: {{ section.settings.primary_button_hover_background }};
    color: {{ section.settings.primary_button_hover_color }};
    border-color: {{ section.settings.primary_button_hover_border }};
    transform: translateY(-{{ section.settings.button_hover_lift }}px);
