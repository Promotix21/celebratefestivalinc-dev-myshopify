    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 1.6s;
  }
  
  .restaurant-partner-{{ section.id }} .partner-content.animate-in .cta-section {
