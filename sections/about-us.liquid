    background: {{ section.settings.secondary_button_hover_background }};
    color: {{ section.settings.secondary_button_hover_color }};
    border-color: {{ section.settings.secondary_button_hover_border }};
    transform: translateY(-{{ section.settings.button_hover_lift }}px);
    box-shadow: {{ section.settings.secondary_button_hover_shadow }};
