    color: {{ section.settings.stat_label_color }};
    font-weight: {{ section.settings.stat_label_font_weight }};
  }
</style>

<div class="restaurant-partner-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="partner-content">
      {% if section.settings.show_badge and section.settings.badge_text != blank %}
        <div class="section-badge">
          {% if section.settings.badge_icon %}
            <i class="fas fa-{{ section.settings.badge_icon }}"></i>
          {% endif %}
          {{ section.settings.badge_text }}
        </div>
      {% endif %}
      
      {% if section.settings.main_title != blank %}
        <h2 class="main-title">{{ section.settings.main_title }}</h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      
      {% if section.blocks.size > 0 %}
        <div class="features-grid">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'feature' %}
                <div class="feature-item" {{ block.shopify_attributes }}>
                  {% if block.settings.icon %}
                    <div class="feature-icon">
                      <i class="fas fa-{{ block.settings.icon }}"></i>
                    </div>
                  {% endif %}
                  {% if block.settings.title != blank %}
                    <h3 class="feature-title">{{ block.settings.title }}</h3>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="feature-description">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% if section.settings.show_buttons %}
        <div class="cta-section">
          <div class="cta-buttons">
            {% if section.settings.primary_button_text != blank %}
              <a href="{{ section.settings.primary_button_link | default: '#' }}" class="btn btn-primary">
                {% if section.settings.primary_button_icon %}
                  <i class="fas fa-{{ section.settings.primary_button_icon }}"></i>
                {% endif %}
                {{ section.settings.primary_button_text }}
              </a>
            {% endif %}
            
            {% if section.settings.secondary_button_text != blank %}
              <a href="{{ section.settings.secondary_button_link | default: '#' }}" class="btn btn-secondary">
                {% if section.settings.secondary_button_icon %}
                  <i class="fas fa-{{ section.settings.secondary_button_icon }}"></i>
                {% endif %}
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.show_stats %}
        <div class="stats-section">
          <div class="stats-grid">
            {% if section.settings.stat_1_number != blank %}
              <div class="stat-item">
                <span class="stat-number">{{ section.settings.stat_1_number }}</span>
                <span class="stat-label">{{ section.settings.stat_1_label }}</span>
              </div>
            {% endif %}
            {% if section.settings.stat_2_number != blank %}
              <div class="stat-item">
                <span class="stat-number">{{ section.settings.stat_2_number }}</span>
                <span class="stat-label">{{ section.settings.stat_2_label }}</span>
              </div>
            {% endif %}
            {% if section.settings.stat_3_number != blank %}
              <div class="stat-item">
                <span class="stat-number">{{ section.settings.stat_3_number }}</span>
                <span class="stat-label">{{ section.settings.stat_3_label }}</span>
              </div>
            {% endif %}
            {% if section.settings.stat_4_number != blank %}
              <div class="stat-item">
                <span class="stat-number">{{ section.settings.stat_4_number }}</span>
                <span class="stat-label">{{ section.settings.stat_4_label }}</span>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const observerOptions = {
    root: null,
    rootMargin: '0px 0px -100px 0px',
    threshold: 0.1
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const sectionId = entry.target.getAttribute('data-section-id');
        const content = entry.target.querySelector('.partner-content');
        if (content) {
          content.classList.add('animate-in');
        }
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);
  
  const section = document.querySelector('.restaurant-partner-{{ section.id }}');
  if (section) {
    observer.observe(section);
  }
});
</script>

