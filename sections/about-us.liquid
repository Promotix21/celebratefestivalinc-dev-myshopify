<style>
  .restaurant-partner-{{ section.id }} {
    padding: {{ section.settings.section_padding_top_desktop }}px 0 {{ section.settings.section_padding_bottom_desktop }}px;
    background: {{ section.settings.section_background_color }};
    {% if section.settings.background_image %}
      background-image: url('{{ section.settings.background_image | img_url: '1920x' }}');
      background-size: {{ section.settings.background_size }};
      background-position: {{ section.settings.background_position }};
      background-repeat: no-repeat;
    {% endif %}
    position: relative;
    overflow: hidden;
  }
  
  @media (max-width: 1024px) {
    .restaurant-partner-{{ section.id }} {
      padding: {{ section.settings.section_padding_top_tablet }}px 0 {{ section.settings.section_padding_bottom_tablet }}px;
    }
  }
  
  @media (max-width: 768px) {
    .restaurant-partner-{{ section.id }} {
      padding: {{ section.settings.section_padding_top_mobile }}px 0 {{ section.settings.section_padding_bottom_mobile }}px;
    }
  }
  
  .restaurant-partner-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }
  
  .restaurant-partner-{{ section.id }} .container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }
  
  .restaurant-partner-{{ section.id }} .partner-content {
    text-align: {{ section.settings.content_alignment }};
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .restaurant-partner-{{ section.id }} .partner-content.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  .restaurant-partner-{{ section.id }} .section-badge {
    display: inline-block;
    background: {{ section.settings.badge_background_color }};
    color: {{ section.settings.badge_text_color }};
    padding: {{ section.settings.badge_padding_vertical }}px {{ section.settings.badge_padding_horizontal }}px;
    border-radius: {{ section.settings.badge_border_radius }}px;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    text-transform: {{ section.settings.badge_text_transform }};
    letter-spacing: {{ section.settings.badge_letter_spacing }}px;
    margin-bottom: {{ section.settings.badge_margin_bottom }}px;
    border: {{ section.settings.badge_border_width }}px solid {{ section.settings.badge_border_color }};
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.2s;
  }
  
  .restaurant-partner-{{ section.id }} .partner-content.animate-in .section-badge {
    opacity: 1;
    transform: translateY(0);
  }
  
  .restaurant-partner-{{ section.id }} .main-title {
    font-size: {{ section.settings.title_font_size_desktop }}px;
    line-height: {{ section.settings.title_line_height }};
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    font-family: {{ section.settings.title_font_family }};
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.4s;
  }
  
  @media (max-width: 1024px) {
    .restaurant-partner-{{ section.id }} .main-title {
      font-size: {{ section.settings.title_font_size_tablet }}px;
    }
  }
  
  @media (max-width: 768px) {
    .restaurant-partner-{{ section.id }} .main-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
  }
  
  .restaurant-partner-{{ section.id }} .partner-content.animate-in .main-title {
    opacity: 1;
    transform: translateY(0);
  }
  
  .restaurant-partner-{{ section.id }} .subtitle {
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    line-height: {{ section.settings.subtitle_line_height }};
    font-weight: {{ section.settings.subtitle_font_weight }};
    color: {{ section.settings.subtitle_color }};
    margin-bottom: {{ section.settings.subtitle_margin_bottom }}px;
    max-width: {{ section.settings.subtitle_max_width }}px;
    {% if section.settings.content_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.6s;
