  @media (max-width: 768px) {
    .restaurant-partner-{{ section.id }} .subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
    }
  }
  
  .restaurant-partner-{{ section.id }} .partner-content.animate-in .subtitle {
