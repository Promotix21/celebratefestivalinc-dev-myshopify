    padding-top: {{ section.settings.stats_padding_top }}px;
    border-top: {{ section.settings.stats_border_width }}px solid {{ section.settings.stats_border_color }};
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 1.8s;
  }
  
  .restaurant-partner-{{ section.id }} .partner-content.animate-in .stats-section {
    opacity: 1;
    transform: translateY(0);
  }
  
  .restaurant-partner-{{ section.id }} .stats-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.stats_columns_desktop }}, 1fr);
    gap: {{ section.settings.stats_gap }}px;
  }
  
  @media (max-width: 1024px) {
    .restaurant-partner-{{ section.id }} .stats-grid {
      grid-template-columns: repeat({{ section.settings.stats_columns_tablet }}, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .restaurant-partner-{{ section.id }} .stats-grid {
      grid-template-columns: repeat({{ section.settings.stats_columns_mobile }}, 1fr);
    }
