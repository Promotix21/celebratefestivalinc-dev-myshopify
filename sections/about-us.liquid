    background: {{ section.settings.feature_icon_hover_background }};
    color: {{ section.settings.feature_icon_hover_color }};
    transform: scale(1.1);
  }
  
  .restaurant-partner-{{ section.id }} .feature-title {
    font-size: {{ section.settings.feature_title_font_size }}px;
    font-weight: {{ section.settings.feature_title_font_weight }};
    color: {{ section.settings.feature_title_color }};
    margin-bottom: {{ section.settings.feature_title_margin_bottom }}px;
    line-height: {{ section.settings.feature_title_line_height }};
