    gap: {{ section.settings.button_gap }}px;
    {% if section.settings.content_alignment == 'center' %}
      justify-content: center;
    {% elsif section.settings.content_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
