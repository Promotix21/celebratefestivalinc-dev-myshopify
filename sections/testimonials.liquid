{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

<div class="testimonial-section section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="testimonial-container">
      <!-- Left Column (30%) - Summary -->
      <div class="testimonial-summary">
        <div class="summary-content">
          <div class="company-logo">
            {% if section.settings.logo != blank %}
              <img src="{{ section.settings.logo | image_url: width: 120 }}" 
                   alt="{{ shop.name }}" 
                   loading="lazy"
                   width="120"
                   height="auto">
            {% else %}
              <h3>{{ section.settings.company_name | default: shop.name }}</h3>
            {% endif %}
          </div>
          
          <div class="rating-display">
            <div class="stars">
              {% for i in (1..5) %}
                <svg class="star" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% endfor %}
            </div>
            <div class="rating-score">{{ section.settings.rating | default: '5.0' }}</div>
          </div>
          
          <div class="rating-source">
            <p>Based on {{ section.settings.review_count | default: '128+' }} Google Reviews</p>
          </div>
          
          <a href="{{ section.settings.reviews_link }}" class="see-all-reviews">
            See All Reviews
          </a>
        </div>
      </div>
      
      <!-- Right Column (70%) - Testimonial Slider -->
      <div class="testimonial-slider">
        <div class="slider-container">
          <div class="testimonial-track" data-current="0">
            {% for block in section.blocks %}
              <div class="testimonial-slide {{ block.type }}" {{ block.shopify_attributes }}>
                <div class="testimonial-content">
                  <div class="testimonial-stars">
                    {% for i in (1..5) %}
                      <svg class="star" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {% endfor %}
                  </div>
                  
                  <h3 class="testimonial-title">{{ block.settings.title }}</h3>
                  
                  <div class="testimonial-text">
                    {{ block.settings.content }}
                  </div>
                  
                  <div class="testimonial-author">
                    <div class="author-name">{{ block.settings.author_name }}</div>
                    <div class="author-title">{{ block.settings.author_title }}</div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
          
          <!-- Navigation Arrows -->
          <button class="slider-btn prev-btn" onclick="changeSlide(-1)">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
            </svg>
          </button>
          
          <button class="slider-btn next-btn" onclick="changeSlide(1)">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
            </svg>
          </button>
        </div>
        
        <!-- Slider Dots -->
        <div class="slider-dots">
          {% for block in section.blocks %}
            <button class="dot {% if forloop.first %}active{% endif %}" 
                    onclick="goToSlide({{ forloop.index0 }})"></button>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.testimonial-section {
  padding: 60px 0;
  background-color: #f8f9fa;
}

.testimonial-container {
  display: flex;
  background: white;
  border-radius: 16px;
  box-shadow: 0 8px 32px rgba(36, 68, 105, 0.1);
  overflow: hidden;
  min-height: 450px;
}

.testimonial-summary {
  width: 30%;
  background-color: #244469;
  color: white;
  padding: 40px 30px;
  display: flex;
  align-items: center;
}

.summary-content {
  width: 100%;
  text-align: center;
}

.company-logo img {
  max-width: 120px;
  height: auto;
  margin-bottom: 20px;
}

.company-logo h3 {
  color: white;
  font-size: 24px;
  margin-bottom: 20px;
}

.stars {
  display: flex;
  justify-content: center;
  gap: 4px;
  margin-bottom: 12px;
}

.star {
  width: 20px;
  height: 20px;
  color: #ffd700;
}

.rating-score {
  font-size: 48px;
  font-weight: bold;
  color: white;
  margin-bottom: 8px;
}

.rating-source {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 30px;
}

.see-all-reviews {
  background-color: #f14f56;
  color: white;
  padding: 12px 24px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.3s ease;
  display: inline-block;
}

.see-all-reviews:hover {
  background-color: #e03e45;
  transform: translateY(-2px);
}

.testimonial-slider {
  width: 70%;
  position: relative;
  overflow: hidden;
}

.slider-container {
  height: 100%;
  position: relative;
}

.testimonial-track {
  display: flex;
  height: 100%;
  transition: transform 0.5s ease;
}

.testimonial-slide {
  min-width: 100%;
  padding: 50px;
  display: flex;
  align-items: center;
}

.testimonial-content {
  max-width: 100%;
}

.testimonial-stars {
  display: flex;
  gap: 4px;
  margin-bottom: 20px;
}

.testimonial-stars .star {
  width: 18px;
  height: 18px;
  color: #ffd700;
}

.testimonial-title {
  color: #244469;
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 20px;
  line-height: 1.3;
}

.testimonial-text {
  color: #666;
  font-size: 16px;
  line-height: 1.6;
  margin-bottom: 30px;
}

.testimonial-author {
  border-top: 1px solid #eee;
  padding-top: 20px;
}

.author-name {
  font-weight: 600;
  color: #244469;
  font-size: 18px;
  margin-bottom: 4px;
}

.author-title {
  color: #666;
  font-size: 14px;
}

.slider-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(36, 68, 105, 0.1);
  border: none;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 2;
}

.slider-btn:hover {
  background: #f14f56;
  color: white;
}

.prev-btn {
  left: 20px;
}

.next-btn {
  right: 20px;
}

.slider-btn svg {
  width: 24px;
  height: 24px;
}

.slider-dots {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 10px;
}

.dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: none;
  background-color: rgba(36, 68, 105, 0.3);
  cursor: pointer;
  transition: all 0.3s ease;
}

.dot.active {
  background-color: #f14f56;
  transform: scale(1.2);
}

/* Responsive Design */
@media (max-width: 768px) {
  .testimonial-container {
    flex-direction: column;
  }
  
  .testimonial-summary,
  .testimonial-slider {
    width: 100%;
  }
  
  .testimonial-slide {
    padding: 30px 20px;
  }
  
  .testimonial-title {
    font-size: 20px;
  }
}
</style>

<script>
let currentSlide = 0;
const slides = document.querySelectorAll('.testimonial-slide');
const dots = document.querySelectorAll('.dot');
const track = document.querySelector('.testimonial-track');

function updateSlider() {
  track.style.transform = `translateX(-${currentSlide * 100}%)`;
  
  dots.forEach((dot, index) => {
    dot.classList.toggle('active', index === currentSlide);
  });
}

function changeSlide(direction) {
  currentSlide += direction;
  
  if (currentSlide >= slides.length) {
    currentSlide = 0;
  } else if (currentSlide < 0) {
    currentSlide = slides.length - 1;
  }
  
  updateSlider();
}

function goToSlide(slideIndex) {
  currentSlide = slideIndex;
  updateSlider();
}

// Auto-play functionality (optional)
setInterval(() => {
  changeSlide(1);
}, 5000);
</script>

